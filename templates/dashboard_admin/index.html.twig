{% extends 'base.html.twig' %}

{% block title %}Admin Dashboard{% endblock %}

{% block body %}
<div class="d-flex">

    <!-- ================= Sidebar ================= -->
    <nav class="sidebar bg-dark vh-100 sticky-top d-none d-xl-block">
        <div class="p-4 flex-column h-100 d-flex">

            <!-- Logo -->
            <a class="d-block text-center mb-4" href="{{ path('home') }}">
                <img src="{{ asset('images/logo-light.png') }}" alt="logo" style="height: 100px;">
            </a>

            <!-- Menu -->
            <div class="list-group list-group-dark list-group-borderless flex-grow-1">

                <!-- Principal -->
                <small class="text-uppercase text-muted fw-bold mb-2"
                       style="font-size: 0.7rem; letter-spacing: 1px;">
                    Principal
                </small>

                <a class="list-group-item {{ app.request.get('_route') == 'admin_dashboard' ? 'active' : '' }}"
                   href="{{ path('admin_dashboard') }}">
                    <i class="bi bi-grid-1x2 me-2"></i> Dashboard
                </a>

                <a class="list-group-item {{ app.request.get('_route') starts with 'app_user' ? 'active' : '' }}"
                   href="{{ path('app_user_index') }}">
                    <i class="bi bi-people-fill me-2"></i> Utilisateurs
                </a>

                <!-- Gestion Académique -->
                <small class="text-uppercase text-muted fw-bold mt-4 mb-2"
                       style="font-size: 0.7rem; letter-spacing: 1px;">
                    Gestion Académique
                </small>

                <a class="list-group-item" href="#">
                    <i class="bi bi-journal-bookmark-fill me-2"></i> Cours & Ressources
                </a>

                <a class="list-group-item" href="#">
                    <i class="bi bi-patch-question me-2"></i> Quiz & Évaluations
                </a>

                <a class="list-group-item" href="#">
                    <i class="bi bi-calendar3 me-2"></i> Événements
                </a>

                <a class="list-group-item" href="#">
                    <i class="bi bi-folder2-open me-2"></i> Projets & Portfolio
                </a>

                <!-- Paramètres -->
                <small class="text-uppercase text-muted fw-bold mt-4 mb-2"
                       style="font-size: 0.7rem; letter-spacing: 1px;">
                    Paramètres
                </small>

                <a class="list-group-item" href="{{ path('home') }}">
                    <i class="bi bi-gear-fill me-2"></i> Settings
                </a>

                <!-- Sign Out -->
                <a class="list-group-item text-danger bg-danger-soft-hover mt-2"
                   href="{{ path('home') }}">
                    <i class="bi bi-power me-2"></i> Sign Out
                </a>

            </div>
        </div>
    </nav>

    <!-- ================= Main Content ================= -->
    <div class="flex-grow-1 min-vh-100 d-flex flex-column">

        <!-- ================= Header ================= -->
        <header class="navbar navbar-expand-xl bg-white border-bottom px-4 sticky-top"
                style="height: 70px;">

            <div class="container-fluid p-0">

                <!-- Search Bar -->
                <div class="d-flex align-items-center flex-grow-1">
                    <form class="position-relative w-100" style="max-width: 450px;">
                        <span class="position-absolute top-50 start-0 translate-middle-y ms-3">
                             <i class="bi bi-search fs-5 text-dark"></i>
                        </span>
                        <input class="form-control bg-light border-0 ps-5 py-2"
                               type="search"
                               placeholder="Rechercher un cours, un projet..."
                               style="border-radius: 12px;">
                    </form>
                </div>

                <!-- Right Navbar -->
                <ul class="navbar-nav ms-auto align-items-center">

                    <!-- Notification -->
                    <li class="nav-item me-3">
                        <a class="nav-link position-relative p-2 bg-light rounded-circle" href="#">
                            <i class="bi bi-bell-fill"></i>
                            <span class="position-absolute top-0 start-100 translate-middle badge border border-light rounded-circle bg-danger p-1">
                                <span class="visually-hidden">unread messages</span>
                            </span>
                        </a>
                    </li>

                    <!-- Profile -->
                    <li class="nav-item dropdown">
                        <a class="nav-link p-0 d-flex align-items-center"
                           href="#"
                           id="profileDropdown"
                           data-bs-toggle="dropdown">

                            <div class="text-end me-2 d-none d-sm-block">
                                <p class="mb-0 small fw-bold text-dark">Admin</p>
                                <p class="mb-0 smallest text-muted" style="font-size: 10px;">
                                    Administrateur
                                </p>
                            </div>

                            <div class="avatar">
                                <img class="avatar-img rounded-circle border border-2 border-primary"
                                     src="{{ asset('assets/images/avatar/01.jpg') }}"
                                     alt="user"
                                     style="width: 40px; height: 40px;">
                            </div>
                        </a>

                        <ul class="dropdown-menu dropdown-menu-end shadow border-0 mt-2">
                            <li>
                                <a class="dropdown-item" href="#">
                                    <i class="bi bi-person me-2"></i> Profil
                                </a>
                            </li>
                            <li>
                                <a class="dropdown-item" href="#">
                                    <i class="bi bi-lock me-2"></i> Sécurité
                                </a>
                            </li>
                            <li><hr class="dropdown-divider"></li>
                            <li>
                                <a class="dropdown-item text-danger" href="#">
                                    <i class="bi bi-box-arrow-right me-2"></i> Déconnexion
                                </a>
                            </li>
                        </ul>
                    </li>

                </ul>
            </div>
        </header>

        <!-- ================= Main ================= -->
        <main class="p-4 flex-grow-1" style="background-color: #f0f2f5;">
            <div class="container-fluid">

                <div class="mb-4">
                    <h4 class="fw-bold mb-1">Tableau de Bord Administratif</h4>
                    <p class="text-muted small">Bienvenue sur votre espace de gestion centralisée.</p>
                </div>

                <!-- Statistics Cards -->
                <div class="row g-4 mb-4">
                    <div class="col-xl-3 col-md-6">
                        <div class="card border-0 shadow-sm h-100 p-3">
                            <div class="d-flex justify-content-between align-items-start">
                                <div>
                                    <p class="text-muted small mb-1">Cours Actifs</p>
                                    <h3 class="fw-bold">24</h3>
                                    <small class="text-success">
                                        <i class="bi bi-arrow-up"></i> +12% ce mois
                                    </small>
                                </div>
                                <div class="bg-primary-soft p-3 rounded-3">
                                    <i class="bi bi-book text-primary fs-4"></i>
                                </div>
                            </div>
                        </div>
                    </div>

                    <div class="col-xl-3 col-md-6">
                        <div class="card border-0 shadow-sm h-100 p-3">
                            <div class="d-flex justify-content-between align-items-start">
                                <div>
                                    <p class="text-muted small mb-1">Total Utilisateurs</p>
                                    <h3 class="fw-bold">156</h3>
                                    <small class="text-success">
                                        <i class="bi bi-arrow-up"></i> +8% ce mois
                                    </small>
                                </div>
                                <div class="bg-success-soft p-3 rounded-3">
                                    <i class="bi bi-people text-success fs-4"></i>
                                </div>
                            </div>
                        </div>
                    </div>

                    <div class="col-xl-3 col-md-6">
                        <div class="card border-0 shadow-sm h-100 p-3">
                            <div class="d-flex justify-content-between align-items-start">
                                <div>
                                    <p class="text-muted small mb-1">Enseignants</p>
                                    <h3 class="fw-bold">45</h3>
                                    <small class="text-muted">
                                        <i class="bi bi-dash"></i> Stable
                                    </small>
                                </div>
                                <div class="bg-warning-soft p-3 rounded-3">
                                    <i class="bi bi-person-workspace text-warning fs-4"></i>
                                </div>
                            </div>
                        </div>
                    </div>

                    <div class="col-xl-3 col-md-6">
                        <div class="card border-0 shadow-sm h-100 p-3">
                            <div class="d-flex justify-content-between align-items-start">
                                <div>
                                    <p class="text-muted small mb-1">Étudiants</p>
                                    <h3 class="fw-bold">111</h3>
                                    <small class="text-success">
                                        <i class="bi bi-arrow-up"></i> +15% ce mois
                                    </small>
                                </div>
                                <div class="bg-info-soft p-3 rounded-3">
                                    <i class="bi bi-person-badge text-info fs-4"></i>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- User Management Section -->
                <div class="row">
                    <div class="col-12">
                        <div class="card border-0 shadow-sm">
                            <div class="card-header bg-white border-bottom py-3">
                                <div class="d-sm-flex justify-content-between align-items-center">
                                    <div>
                                        <h5 class="mb-0 fw-bold">
                                            <i class="bi bi-people-fill text-primary me-2"></i>
                                            Gestion des Utilisateurs
                                        </h5>
                                        <p class="text-muted small mb-0 mt-1">
                                            Gérez tous vos utilisateurs depuis cette interface
                                        </p>
                                    </div>
                                    <a href="{{ path('app_user_new') }}" class="btn btn-success mt-2 mt-sm-0">
                                        <i class="bi bi-plus-circle me-2"></i>Nouvel utilisateur
                                    </a>
                                </div>
                            </div>

                            <div class="card-body p-0">
                                <!-- Users Table -->
                                <div class="table-responsive">
                                    <table class="table table-hover align-middle mb-0">
                                        <thead class="table-light">
                                            <tr>
                                                <th class="border-0 ps-4">Utilisateur</th>
                                                <th class="border-0">Email</th>
                                                <th class="border-0">Rôle</th>
                                                <th class="border-0">Statut</th>
                                                <th class="border-0 text-end pe-4">Actions</th>
                                            </tr>
                                        </thead>
                                        <tbody>
                                            <tr>
                                                <td class="ps-4">
                                                    <div class="d-flex align-items-center">
                                                        <div class="avatar avatar-sm me-2">
                                                            <div class="avatar-img rounded-circle bg-primary bg-opacity-10 text-primary d-flex align-items-center justify-content-center" style="width: 40px; height: 40px;">
                                                                <span class="fw-bold">JD</span>
                                                            </div>
                                                        </div>
                                                        <h6 class="mb-0">John Doe</h6>
                                                    </div>
                                                </td>
                                                <td>john.doe@example.com</td>
                                                <td>
                                                    <span class="badge bg-danger bg-opacity-10 text-danger">
                                                        <i class="bi bi-shield-fill-check me-1"></i>Admin
                                                    </span>
                                                </td>
                                                <td>
                                                    <span class="badge bg-success">Activé</span>
                                                </td>
                                                <td class="text-end pe-4">
                                                    <a href="{{ path('app_user_index') }}" class="btn btn-sm btn-light">
                                                        <i class="bi bi-eye"></i>
                                                    </a>
                                                </td>
                                            </tr>
                                        </tbody>
                                    </table>
                                </div>

                                <!-- Footer -->
                                <div class="card-footer bg-white text-center py-3">
                                    <a href="{{ path('app_user_index') }}" class="btn btn-link">
                                        Voir tous les utilisateurs <i class="bi bi-arrow-right ms-1"></i>
                                    </a>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

            </div>
        </main>

    </div>
</div>
{% endblock %}