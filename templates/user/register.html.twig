{% extends 'base.html.twig' %}

{% block title %}Inscription{% endblock %}

{% block body %}
<section class="py-5 bg-light">
    <div class="container">
        <div class="row">
            <div class="col-lg-6 mx-auto">
                <!-- Registration Card -->
                <div class="card shadow">
                    <!-- Card header -->
                    <div class="card-header bg-success bg-opacity-10 border-bottom">
                        <div class="d-flex align-items-center">
                            <div class="icon-lg bg-success text-white rounded-circle flex-shrink-0">
                                <i class="bi bi-person-plus-fill"></i>
                            </div>
                            <div class="ms-3">
                                <h4 class="mb-0 text-success">
                                    <i class="bi bi-person-plus me-2"></i>
                                    Créer un compte
                                </h4>
                                <p class="mb-0 small">Rejoignez notre plateforme éducative</p>
                            </div>
                        </div>
                    </div>

                    <!-- Card body -->
                    <div class="card-body p-4">
                        {{ form_start(form, {'attr': {'novalidate': 'novalidate'}}) }}
                            <div class="row g-3">
                                <!-- Nom -->
                                <div class="col-md-6">
                                    <label class="form-label fw-bold">
                                        <i class="bi bi-person me-1 text-primary"></i>
                                        Nom <span class="text-danger">*</span>
                                    </label>
                                    {{ form_widget(form.nom, {
                                        'attr': {
                                            'class': 'form-control' ~ (form.nom.vars.errors|length > 0 ? ' is-invalid' : ''),
                                            'placeholder': 'Votre nom'
                                        }
                                    }) }}
                                    {% if form.nom.vars.errors|length > 0 %}
                                        <div class="alert alert-danger mt-2 py-2" role="alert">
                                            <i class="bi bi-exclamation-triangle-fill me-2"></i>
                                            {{ form_errors(form.nom) }}
                                        </div>
                                    {% endif %}
                                </div>

                                <!-- Prénom -->
                                <div class="col-md-6">
                                    <label class="form-label fw-bold">
                                        <i class="bi bi-person me-1 text-primary"></i>
                                        Prénom <span class="text-danger">*</span>
                                    </label>
                                    {{ form_widget(form.prenom, {
                                        'attr': {
                                            'class': 'form-control' ~ (form.prenom.vars.errors|length > 0 ? ' is-invalid' : ''),
                                            'placeholder': 'Votre prénom'
                                        }
                                    }) }}
                                    {% if form.prenom.vars.errors|length > 0 %}
                                        <div class="alert alert-danger mt-2 py-2" role="alert">
                                            <i class="bi bi-exclamation-triangle-fill me-2"></i>
                                            {{ form_errors(form.prenom) }}
                                        </div>
                                    {% endif %}
                                </div>

                                <!-- Email -->
                                <div class="col-12">
                                    <label class="form-label fw-bold">
                                        <i class="bi bi-envelope me-1 text-primary"></i>
                                        Email <span class="text-danger">*</span>
                                    </label>
                                    {{ form_widget(form.email, {
                                        'attr': {
                                            'class': 'form-control' ~ (form.email.vars.errors|length > 0 ? ' is-invalid' : ''),
                                            'placeholder': 'votre.email@exemple.com'
                                        }
                                    }) }}
                                    {% if form.email.vars.errors|length > 0 %}
                                        <div class="alert alert-danger mt-2 py-2" role="alert">
                                            <i class="bi bi-exclamation-triangle-fill me-2"></i>
                                            <strong>Erreur d'email:</strong>
                                            <ul class="mb-0 mt-1">
                                                {% for error in form.email.vars.errors %}
                                                    <li>{{ error.message }}</li>
                                                {% endfor %}
                                            </ul>
                                        </div>
                                    {% endif %}
                                    <small class="text-muted">
                                        <i class="bi bi-info-circle me-1"></i>
                                        Utilisez une adresse email valide (ex: nom@domaine.com)
                                    </small>
                                </div>

                                <!-- Password -->
                                <div class="col-12">
                                    <label class="form-label fw-bold">
                                        <i class="bi bi-key me-1 text-primary"></i>
                                        Mot de passe <span class="text-danger">*</span>
                                    </label>
                                    {{ form_widget(form.plainPassword, {
                                        'attr': {
                                            'class': 'form-control' ~ (form.plainPassword.vars.errors|length > 0 ? ' is-invalid' : ''),
                                            'placeholder': '••••••••'
                                        }
                                    }) }}
                                    {% if form.plainPassword.vars.errors|length > 0 %}
                                        <div class="alert alert-danger mt-2 py-2" role="alert">
                                            <i class="bi bi-exclamation-triangle-fill me-2"></i>
                                            <strong>Erreur(s) de mot de passe:</strong>
                                            <ul class="mb-0 mt-1">
                                                {% for error in form.plainPassword.vars.errors %}
                                                    <li>{{ error.message }}</li>
                                                {% endfor %}
                                            </ul>
                                        </div>
                                    {% endif %}
                                    <small class="text-muted d-block mt-2">
                                        <i class="bi bi-info-circle me-1"></i>
                                        Min. 8 caractères, 1 majuscule, 1 minuscule, 1 chiffre
                                    </small>
                                </div>

                                <!-- Role -->
                                <div class="col-12">
                                    <label class="form-label fw-bold">
                                        <i class="bi bi-person-badge me-1 text-primary"></i>
                                        Rôle <span class="text-danger">*</span>
                                    </label>
                                    {{ form_widget(form.role, {
                                        'attr': {
                                            'class': 'form-select' ~ (form.role.vars.errors|length > 0 ? ' is-invalid' : '')
                                        }
                                    }) }}
                                    {% if form.role.vars.errors|length > 0 %}
                                        <div class="alert alert-danger mt-2 py-2" role="alert">
                                            <i class="bi bi-exclamation-triangle-fill me-2"></i>
                                            {{ form_errors(form.role) }}
                                        </div>
                                    {% endif %}
                                </div>

                                <!-- Info Alert -->
                                <div class="col-12">
                                    <div class="alert alert-info d-flex align-items-center" role="alert">
                                        <i class="bi bi-shield-check fs-4 me-3"></i>
                                        <div>
                                            <strong>Compte sécurisé:</strong> Votre mot de passe sera chiffré et votre compte activé automatiquement.
                                        </div>
                                    </div>
                                </div>
                            </div>

                            <!-- Buttons -->
                            <div class="d-grid gap-2 mt-4">
                                <button type="submit" class="btn btn-success btn-lg">
                                    <i class="bi bi-check-circle me-2"></i>
                                    Créer mon compte
                                </button>
                                <a href="{{ path('home') }}" class="btn btn-outline-secondary">
                                    <i class="bi bi-arrow-left me-2"></i>
                                    Retour à l'accueil
                                </a>
                            </div>
                        {{ form_end(form) }}
                    </div>
                </div>

                <!-- Login Link -->
                <div class="text-center mt-3">
                    <p class="mb-0">
                        Vous avez déjà un compte? 
                        <a href="{{ path('app_login') }}" class="text-decoration-none fw-bold">Connectez-vous</a>
                    </p>
                </div>
            </div>
        </div>
    </div>
</section>
{% endblock %}