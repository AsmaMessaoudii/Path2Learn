{% extends 'base.html.twig' %}

{% block title %}Connexion{% endblock %}

{% block body %}
<section class="py-5 bg-light">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-lg-5">
                <div class="card shadow">
                    <!-- Card header -->
                    <div class="card-header bg-primary bg-opacity-10">
                        <h4 class="text-primary mb-0">
                            <i class="bi bi-box-arrow-in-right me-2"></i>Connexion
                        </h4>
                        <p class="mb-0 small">Connectez-vous pour acc√©der √† votre profil</p>
                    </div>

                    <!-- Card body -->
                    <div class="card-body p-4">

                        {% if error %}
                            <div class="alert alert-danger">
                                {{ error.messageKey|trans(error.messageData, 'security') }}
                            </div>
                        {% endif %}

                        <!-- Tabs: Classic vs Face Recognition -->
                        <ul class="nav nav-pills nav-fill mb-4" id="loginTabs" role="tablist">
                            <li class="nav-item" role="presentation">
                                <button class="nav-link active" id="classic-tab" data-bs-toggle="pill" data-bs-target="#classic" type="button" role="tab">
                                    <i class="bi bi-key-fill me-2"></i>Classique
                                </button>
                            </li>
                            <li class="nav-item" role="presentation">
    <a class="nav-link" id="face-tab" href="{{ path('app_face_login') }}">
        <i class="bi bi-camera-video-fill me-2"></i>Face ID
    </a>
</li>
                        </ul>

                        <div class="tab-content" id="loginTabContent">
                            
                            <!-- CLASSIC LOGIN TAB -->
                            <div class="tab-pane fade show active" id="classic" role="tabpanel">
                                <form action="{{ path('app_login') }}" method="post">

                                    <!-- Email -->
                                    <div class="mb-3">
                                        <label for="email" class="form-label fw-bold">
                                            <i class="bi bi-envelope me-1 text-primary"></i>Email
                                        </label>
                                        <input type="text" id="email" name="email"
                                               value="{{ last_username }}"
                                               class="form-control"
                                               placeholder="Votre email"
                                               required autofocus>
                                    </div>

                                    <!-- Password -->
                                    <div class="mb-3">
                                        <label for="password" class="form-label fw-bold">
                                            <i class="bi bi-key me-1 text-primary"></i>Mot de passe
                                        </label>
                                        <input type="password" id="password" name="password"
                                               class="form-control"
                                               placeholder="Votre mot de passe"
                                               required>
                                    </div>

                                    <!-- Buttons -->
                                    <div class="d-grid gap-2 mt-4">
                                        <button type="submit" class="btn btn-primary btn-lg">
                                            <i class="bi bi-box-arrow-in-right me-2"></i>Se connecter
                                        </button>

                                        <a href="{{ path('app_user_register') }}" class="btn btn-outline-secondary">
                                            <i class="bi bi-person-plus me-2"></i>S'inscrire
                                        </a>
                                    </div>

                                    <!-- Forgot password link -->
                                    <p class="mt-3 text-center">
                                        <a href="{{ path('app_forgot_password_request') }}">
                                            Mot de passe oubli√© ?
                                        </a>
                                    </p>

                                    <!-- AI Help Button -->
                                    <div class="text-center mt-2">
                                        <button type="button"
                                                class="btn btn-outline-primary btn-sm"
                                                onclick="openChat()">
                                            ü§ñ Besoin d'aide ?
                                        </button>
                                    </div>

                                </form>
                            </div>

                            <!-- FACE RECOGNITION LOGIN TAB -->
                            <div class="tab-pane fade" id="face" role="tabpanel">
                                <div class="text-center">
                                    <div class="alert alert-info">
                                        <i class="bi bi-info-circle me-2"></i>
                                        Positionnez votre visage face √† la cam√©ra
                                    </div>

                                    <!-- Video Preview -->
                                    <video id="faceVideo" width="100%" height="auto" autoplay style="border-radius: 10px; display: none;"></video>
                                    <canvas id="faceCanvas" style="display: none;"></canvas>

                                    <!-- Status -->
                                    <div id="faceStatus" class="alert alert-secondary">
                                        <i class="bi bi-camera me-2"></i>
                                        Cliquez pour d√©marrer la cam√©ra
                                    </div>

                                    <!-- Buttons -->
                                    <div class="d-grid gap-2">
                                        <button id="startCameraBtn" class="btn btn-primary btn-lg">
                                            <i class="bi bi-camera-video me-2"></i>D√©marrer la cam√©ra
                                        </button>
                                        <button id="faceCaptureBtn" class="btn btn-success btn-lg" style="display: none;">
                                            <i class="bi bi-camera me-2"></i>Se connecter avec Face ID
                                        </button>
                                        <button class="btn btn-outline-secondary" onclick="document.getElementById('classic-tab').click()">
                                            <i class="bi bi-arrow-left me-2"></i>Retour connexion classique
                                        </button>
                                    </div>
                                </div>
                            </div>

                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>


<!-- ================= AI CHAT POPUP ================= -->
<div id="chatBox" style="
    display:none;
    position:fixed;
    bottom:20px;
    right:20px;
    width:330px;
    background:white;
    border-radius:15px;
    box-shadow:0 0 15px rgba(0,0,0,0.25);
    padding:15px;
    z-index:9999;
">

    <h6 class="text-primary mb-2">ü§ñ Assistant Support</h6>

    <div id="chatMessages" style="
        height:200px;
        overflow-y:auto;
        border:1px solid #ddd;
        padding:10px;
        margin-bottom:10px;
        font-size:14px;
        border-radius:10px;
    ">
        <div><b>Bot:</b> Bonjour üëã Comment puis-je t'aider ?</div>
    </div>

    <input id="chatInput"
           type="text"
           class="form-control"
           placeholder="Tape ton message...">

    <button class="btn btn-primary w-100 mt-2" onclick="sendMessage()">
        Envoyer
    </button>

    <button class="btn btn-light w-100 mt-1" onclick="closeChat()">
        Fermer ‚úñ
    </button>
</div>


