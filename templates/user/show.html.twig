{% extends 'base.html.twig' %}

{% block title %}Détails utilisateur{% endblock %}

{% block body %}

<!-- Page content START -->
<section class="py-5 bg-light">
    <div class="container">
        <!-- Breadcrumb -->
        <div class="row mb-4">
            <div class="col-12">
                <nav aria-label="breadcrumb">
                    <ol class="breadcrumb breadcrumb-dots mb-0">
                        <li class="breadcrumb-item"><a href="{{ path('home') }}">Accueil</a></li>
                        <li class="breadcrumb-item"><a href="{{ path('app_user_index') }}">Utilisateurs</a></li>
                        <li class="breadcrumb-item active" aria-current="page">Détails</li>
                    </ol>
                </nav>
            </div>
        </div>

        <div class="row">
            <!-- Main Content -->
            <div class="col-lg-8 mx-auto">
                <!-- Profile Card -->
                <div class="card shadow">
                    <!-- Card header -->
                    <div class="card-header bg-info bg-opacity-10 border-bottom">
                        <div class="d-sm-flex align-items-center">
                            <!-- Avatar -->
                            <div class="avatar avatar-xl flex-shrink-0">
                                <div class="avatar-img rounded-circle bg-primary text-white fs-2">
                                    {{ user.prenom|first|upper }}{{ user.nom|first|upper }}
                                </div>
                            </div>
                            <div class="ms-0 ms-sm-3 mt-2 mt-sm-0">
                                <h4 class="mb-0 text-info">
                                    <i class="bi bi-person-circle me-2"></i>
                                    {{ user.prenom }} {{ user.nom }}
                                </h4>
                                <p class="mb-0">{{ user.email }}</p>
                            </div>
                            <!-- Status Badge -->
                            <div class="ms-auto mt-2 mt-sm-0">
                                {% if user.status.value == 'enable' %}
                                    <span class="badge bg-success">
                                        <i class="bi bi-check-circle me-1"></i>Compte actif
                                    </span>
                                {% else %}
                                    <span class="badge bg-warning">
                                        <i class="bi bi-x-circle me-1"></i>Compte désactivé
                                    </span>
                                {% endif %}
                            </div>
                        </div>
                    </div>

                    <!-- Card body -->
                    <div class="card-body p-4">
                        <!-- Personal Information -->
                        <div class="mb-4">
                            <h5 class="mb-3">
                                <i class="bi bi-person-badge text-primary me-2"></i>
                                Informations personnelles
                            </h5>
                            <hr>
                            <div class="row g-3">
                                <div class="col-md-6">
                                    <div class="d-flex align-items-start">
                                        <div class="icon-lg bg-primary bg-opacity-10 text-primary rounded-2 flex-shrink-0">
                                            <i class="bi bi-hash"></i>
                                        </div>
                                        <div class="ms-3">
                                            <p class="mb-1 small text-muted">Identifiant</p>
                                            <h6 class="mb-0">#{{ user.id }}</h6>
                                        </div>
                                    </div>
                                </div>

                                <div class="col-md-6">
                                    <div class="d-flex align-items-start">
                                        <div class="icon-lg bg-success bg-opacity-10 text-success rounded-2 flex-shrink-0">
                                            <i class="bi bi-person"></i>
                                        </div>
                                        <div class="ms-3">
                                            <p class="mb-1 small text-muted">Nom complet</p>
                                            <h6 class="mb-0">{{ user.prenom }} {{ user.nom }}</h6>
                                        </div>
                                    </div>
                                </div>

                                <div class="col-12">
                                    <div class="d-flex align-items-start">
                                        <div class="icon-lg bg-info bg-opacity-10 text-info rounded-2 flex-shrink-0">
                                            <i class="bi bi-envelope"></i>
                                        </div>
                                        <div class="ms-3">
                                            <p class="mb-1 small text-muted">Adresse email</p>
                                            <h6 class="mb-0">
                                                <a href="mailto:{{ user.email }}" class="text-decoration-none">
                                                    {{ user.email }}
                                                </a>
                                            </h6>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <!-- Account Information -->
                        <div class="mb-4">
                            <h5 class="mb-3">
                                <i class="bi bi-gear text-success me-2"></i>
                                Informations du compte
                            </h5>
                            <hr>
                            <div class="row g-3">
                                <div class="col-md-6">
                                    <div class="d-flex align-items-start">
                                        <div class="icon-lg bg-primary bg-opacity-10 text-primary rounded-2 flex-shrink-0">
                                            <i class="bi bi-shield-check"></i>
                                        </div>
                                        <div class="ms-3">
                                            <p class="mb-1 small text-muted">Rôle</p>
                                            <h6 class="mb-0">
                                                {% if user.role.value == 'admin' %}
                                                    <span class="badge bg-danger bg-opacity-10 text-danger">
                                                        <i class="bi bi-shield-fill-check me-1"></i>Administrateur
                                                    </span>
                                                {% elseif user.role.value == 'teacher' %}
                                                    <span class="badge bg-primary bg-opacity-10 text-primary">
                                                        <i class="bi bi-person-workspace me-1"></i>Enseignant
                                                    </span>
                                                {% else %}
                                                    <span class="badge bg-info bg-opacity-10 text-info">
                                                        <i class="bi bi-person me-1"></i>Étudiant
                                                    </span>
                                                {% endif %}
                                            </h6>
                                        </div>
                                    </div>
                                </div>

                                <div class="col-md-6">
                                    <div class="d-flex align-items-start">
                                        <div class="icon-lg bg-success bg-opacity-10 text-success rounded-2 flex-shrink-0">
                                            <i class="bi bi-toggle-on"></i>
                                        </div>
                                        <div class="ms-3">
                                            <p class="mb-1 small text-muted">Statut du compte</p>
                                            <h6 class="mb-0">
                                                {% if user.status.value == 'enable' %}
                                                    <span class="badge bg-success">
                                                        <i class="bi bi-check-circle me-1"></i>Activé
                                                    </span>
                                                {% else %}
                                                    <span class="badge bg-warning">
                                                        <i class="bi bi-x-circle me-1"></i>Désactivé
                                                    </span>
                                                {% endif %}
                                            </h6>
                                        </div>
                                    </div>
                                </div>

                                <div class="col-12">
                                    <div class="d-flex align-items-start">
                                        <div class="icon-lg bg-warning bg-opacity-10 text-warning rounded-2 flex-shrink-0">
                                            <i class="bi bi-calendar3"></i>
                                        </div>
                                        <div class="ms-3">
                                            <p class="mb-1 small text-muted">Date de création</p>
                                            <h6 class="mb-0">
                                                <i class="bi bi-calendar-check me-1"></i>
                                                {{ user.dateCreation ? user.dateCreation|date('d/m/Y') : 'Non définie' }}
                                            </h6>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <!-- Security Notice -->
                        <div class="alert alert-warning d-flex align-items-center" role="alert">
                            <i class="bi bi-shield-lock-fill fs-4 me-3"></i>
                            <div>
                                <strong>Sécurité:</strong> Le mot de passe est chiffré et ne peut pas être affiché pour des raisons de sécurité.
                            </div>
                        </div>
                    </div>

                    <!-- Card footer -->
                    <div class="card-footer bg-transparent border-top pt-3">
                        <div class="d-sm-flex justify-content-between align-items-center">
                            <a href="{{ path('app_user_index') }}" class="btn btn-secondary mb-2 mb-sm-0">
                                <i class="bi bi-arrow-left me-2"></i>
                                Retour à la liste
                            </a>
                            <div>
                                <a href="{{ path('app_user_edit', {'id': user.id}) }}" class="btn btn-success">
                                    <i class="bi bi-pencil me-2"></i>
                                    Modifier
                                </a>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Delete Section -->
                <div class="card shadow mt-4">
                    <div class="card-header bg-danger bg-opacity-10 border-bottom">
                        <h5 class="mb-0 text-danger">
                            <i class="bi bi-exclamation-triangle me-2"></i>
                            Zone dangereuse
                        </h5>
                    </div>
                    <div class="card-body">
                        <p class="mb-3">
                            <i class="bi bi-info-circle me-2"></i>
                            La suppression de cet utilisateur est définitive et irréversible. Toutes les données associées seront perdues.
                        </p>
                        {{ include('user/_delete_form.html.twig') }}
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
<!-- Page content END -->

{% endblock %}