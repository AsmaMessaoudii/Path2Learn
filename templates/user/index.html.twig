{% extends 'base.html.twig' %}

{% block title %}Liste des utilisateurs{% endblock %}

{% block body %}

<div class="d-flex">

    <!-- ================= Sidebar ================= -->
    <nav class="sidebar bg-dark vh-100 sticky-top d-none d-xl-block">
        <div class="p-4 flex-column h-100 d-flex">

            <!-- Logo -->
            <a class="d-block text-center mb-4" href="{{ path('home') }}">
                <img src="{{ asset('images/logo-light.png') }}" alt="logo" style="height: 100px;">
            </a>

            <!-- Menu -->
            <div class="list-group list-group-dark list-group-borderless flex-grow-1">

                <small class="text-uppercase text-muted fw-bold mb-2"
                       style="font-size: 0.7rem; letter-spacing: 1px;">
                    Principal
                </small>

                <a class="list-group-item {{ app.request.get('_route') == 'admin_dashboard' ? 'active' : '' }}"
                   href="{{ path('admin_dashboard') }}">
                    <i class="bi bi-grid-1x2 me-2"></i> Dashboard
                </a>

                <a class="list-group-item {{ app.request.get('_route') starts with 'app_user' ? 'active' : '' }}"
                   href="{{ path('app_user_index') }}">
                    <i class="bi bi-people-fill me-2"></i> Utilisateurs
                </a>

                <small class="text-uppercase text-muted fw-bold mt-4 mb-2"
                       style="font-size: 0.7rem; letter-spacing: 1px;">
                    Gestion Académique
                </small>

                <a class="list-group-item" href="#">
                    <i class="bi bi-journal-bookmark-fill me-2"></i> Cours & Ressources
                </a>

                <a class="list-group-item" href="#">
                    <i class="bi bi-patch-question me-2"></i> Quiz & Évaluations
                </a>

                <a class="list-group-item" href="#">
                    <i class="bi bi-calendar3 me-2"></i> Événements
                </a>

                <a class="list-group-item" href="#">
                    <i class="bi bi-folder2-open me-2"></i> Projets & Portfolio
                </a>

                <small class="text-uppercase text-muted fw-bold mt-4 mb-2"
                       style="font-size: 0.7rem; letter-spacing: 1px;">
                    Paramètres
                </small>

                <a class="list-group-item" href="{{ path('home') }}">
                    <i class="bi bi-gear-fill me-2"></i> Settings
                </a>

                <a class="list-group-item text-danger bg-danger-soft-hover mt-2"
                   href="{{ path('home') }}">
                    <i class="bi bi-power me-2"></i> Sign Out
                </a>

            </div>
        </div>
    </nav>

    <!-- ================= Main Content ================= -->
    <div class="flex-grow-1 min-vh-100 d-flex flex-column">

        <!-- ================= Header ================= -->
        <header class="navbar navbar-expand-xl bg-white border-bottom px-4 sticky-top"
                style="height: 70px;">

            <div class="container-fluid p-0">

                <!-- Search bar (decorative) -->
                <div class="d-flex align-items-center flex-grow-1">
                    <form class="position-relative w-100" style="max-width: 450px;">
                        <span class="position-absolute top-50 start-0 translate-middle-y ms-3">
                             <i class="bi bi-search fs-5 text-dark"></i>
                        </span>
                        <input class="form-control bg-light border-0 ps-5 py-2"
                               type="search"
                               placeholder="Recherche rapide..."
                               style="border-radius: 12px;">
                    </form>
                </div>

                <!-- Profile -->
                <ul class="navbar-nav ms-auto align-items-center">
                    <li class="nav-item dropdown">
                        <a class="nav-link p-0 d-flex align-items-center"
                           href="#"
                           data-bs-toggle="dropdown">

                            <div class="text-end me-2 d-none d-sm-block">
                                <p class="mb-0 small fw-bold text-dark">Admin</p>
                                <p class="mb-0 smallest text-muted" style="font-size: 10px;">
                                    Administrateur
                                </p>
                            </div>

                            <img class="rounded-circle border border-2 border-primary"
                                 src="{{ asset('assets/images/avatar/01.jpg') }}"
                                 style="width: 40px; height: 40px;">
                        </a>

                        <ul class="dropdown-menu dropdown-menu-end shadow border-0 mt-2">
                            <li>
                                <a class="dropdown-item text-danger" href="#">
                                    <i class="bi bi-box-arrow-right me-2"></i> Déconnexion
                                </a>
                            </li>
                        </ul>
                    </li>
                </ul>

            </div>
        </header>

        <!-- ================= Main ================= -->
        <main class="p-4 flex-grow-1" style="background-color: #f0f2f5;">

            <!-- Page Header -->
            <div class="d-sm-flex justify-content-between align-items-center mb-4">
                <div>
                    <h2 class="fw-bold mb-1">
                        <i class="bi bi-people-fill text-primary me-2"></i>
                        Gestion des utilisateurs
                    </h2>
                    <p class="text-muted mb-0">
                        Gérez tous vos utilisateurs depuis cette interface
                    </p>
                </div>

                <a href="{{ path('app_user_new') }}" class="btn btn-success">
                    <i class="bi bi-plus-circle me-2"></i> Nouvel utilisateur
                </a>
            </div>

            <!-- Users Table Card -->
            <div class="card shadow border-0">

                <!-- Header -->
                <div class="card-header border-bottom bg-white">
                    <div class="row g-3 align-items-center">

                        <div class="col-md-4">
                            <h5 class="mb-0">
                                <i class="bi bi-table me-2 text-primary"></i>
                                Liste des utilisateurs
                            </h5>
                        </div>

                        <!-- Search + Sort -->
                        <div class="col-md-8">
                            <div class="d-flex justify-content-end gap-2">

                                <input class="form-control w-50"
                                       type="search"
                                       id="searchInput"
                                       placeholder="Rechercher par nom ou email...">

                                <select id="sortSelect" class="form-select w-auto">
                                    <option value="ASC">A → Z</option>
                                    <option value="DESC">Z → A</option>
                                </select>

                                <a href="{{ path('app_user_index') }}" class="btn btn-light">
                                    Reset
                                </a>

                            </div>
                        </div>

                    </div>
                </div>

                <!-- Body -->
                <div class="card-body p-0">
                    <div class="table-responsive">
                        <table class="table table-hover align-middle mb-0">

                            <thead class="table-light">
                                <tr>
                                    <th>ID</th>
                                    <th>Utilisateur</th>
                                    <th>Email</th>
                                    <th>Rôle</th>
                                    <th>Statut</th>
                                    <th>Date création</th>
                                    <th class="text-end">Actions</th>
                                </tr>
                            </thead>

                            <tbody id="usersTable">
                            {% for user in users %}
                                <tr>
                                    <td><strong>#{{ user.id }}</strong></td>

                                    <td>{{ user.prenom }} {{ user.nom }}</td>

                                    <td>{{ user.email }}</td>

                                    <td>
                                        {% if user.role.value == 'admin' %}
                                            <span class="badge bg-danger">Admin</span>
                                        {% elseif user.role.value == 'teacher' %}
                                            <span class="badge bg-primary">Enseignant</span>
                                        {% else %}
                                            <span class="badge bg-info">Étudiant</span>
                                        {% endif %}
                                    </td>

                                    <td>
                                        {% if user.status.value == 'enable' %}
                                            <span class="badge bg-success">Activé</span>
                                        {% else %}
                                            <span class="badge bg-warning">Désactivé</span>
                                        {% endif %}
                                    </td>

                                    <td>
                                        {{ user.dateCreation ? user.dateCreation|date('d/m/Y') : '' }}
                                    </td>

                                    <td class="text-end">
                                        <a href="{{ path('app_user_show', {'id': user.id}) }}"
                                           class="btn btn-sm btn-light">
                                            <i class="bi bi-eye"></i>
                                        </a>

                                        <a href="{{ path('app_user_edit', {'id': user.id}) }}"
                                           class="btn btn-sm btn-success">
                                            <i class="bi bi-pencil"></i>
                                        </a>
                                    </td>
                                </tr>

                            {% else %}
                                <tr>
                                    <td colspan="7" class="text-center py-5">
                                        Aucun utilisateur trouvé
                                    </td>
                                </tr>
                            {% endfor %}
                            </tbody>

                        </table>
                    </div>
                </div>

                <!-- Footer -->
                <div class="card-footer text-center bg-white">
                    Total utilisateurs : <strong>{{ users|length }}</strong>
                </div>

            </div>

        </main>
    </div>
</div>

<!-- ✅ Dynamic Search Script -->
<script>
document.addEventListener("DOMContentLoaded", function () {

    const searchInput = document.getElementById("searchInput");
    const sortSelect = document.getElementById("sortSelect");
    const usersTable = document.getElementById("usersTable");

    function fetchUsers() {

        const query = searchInput.value;
        const sort = sortSelect.value;

        fetch("{{ path('app_user_search') }}?q=" + query + "&sort=" + sort)
            .then(response => response.text())
            .then(html => {

                const parser = new DOMParser();
                const doc = parser.parseFromString(html, "text/html");

                const newBody = doc.querySelector("#usersTable");
                usersTable.innerHTML = newBody.innerHTML;
            });
    }

    searchInput.addEventListener("keyup", fetchUsers);
    sortSelect.addEventListener("change", fetchUsers);

});
</script>

{% endblock %}
