{% extends 'base.html.twig' %}

{% block title %}Student Dashboard{% endblock %}

{% block body %}

<!-- =======================
Header START -->
<header class="navbar-light navbar-sticky">
    <nav class="navbar navbar-expand-xl">
        <div class="container">

            <!-- Logo START -->
            <a class="navbar-brand" href="{{ path('home') }}">
                <img class="light-mode-item navbar-brand-item"
                     src="{{ asset('images/logo.png') }}"
                     alt="logo"
                     style="height: 80px;">
                <img class="dark-mode-item navbar-brand-item"
                     src="{{ asset('images/logo-light.png') }}"
                     alt="logo dark"
                     style="height: 80px;">
            </a>
            <!-- Logo END -->

            <!-- Responsive navbar toggler -->
            <button class="navbar-toggler ms-auto" type="button"
                    data-bs-toggle="collapse"
                    data-bs-target="#navbarCollapse">
                <span class="navbar-toggler-animation">
                    <span></span><span></span><span></span>
                </span>
            </button>

            <!-- Main navbar START -->
            <div class="navbar-collapse w-100 collapse" id="navbarCollapse">

                <!-- Center menu -->
                <ul class="navbar-nav navbar-nav-scroll mx-auto">
                    <li class="nav-item">
                        <a class="nav-link active" href="{{ path('student_dashboard') }}">
                            Dashboard
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="{{ path('home') }}">
                            Home
                        </a>
                    </li>
                </ul>

                <!-- User avatar (top-right circle) -->
                <ul class="navbar-nav ms-auto align-items-center">
                    <li class="nav-item dropdown">

                        <a class="nav-link p-0" href="#"
                           id="profileDropdown"
                           data-bs-toggle="dropdown">
                            <div class="avatar avatar-sm">
                                <img class="avatar-img rounded-circle border border-2 border-primary"
                                     src="{{ asset('assets/images/avatar/01.jpg') }}"
                                     alt="user">
                            </div>
                        </a>

                        <!-- Dropdown -->
                        <ul class="dropdown-menu dropdown-menu-end shadow pt-3">

                            <li class="px-3 mb-2">
                                <div class="d-flex align-items-center">
                                    <div class="avatar me-2">
                                        <img class="avatar-img rounded-circle"
                                             src="{{ asset('assets/images/avatar/01.jpg') }}">
                                    </div>
                                    <div>
                                        <h6 class="mb-0">Student</h6>
                                        <small class="text-muted">Dashboard</small>
                                    </div>
                                </div>
                            </li>

                            <li><hr class="dropdown-divider"></li>

                            <li>
                                <a class="dropdown-item" href="{{ path('student_dashboard') }}">
                                    <i class="bi bi-grid-fill me-2"></i>
                                    Dashboard
                                </a>
                            </li>

                            <li>
                                <a class="dropdown-item" href="#">
                                    <i class="bi bi-gear me-2"></i>
                                    Settings
                                </a>
                            </li>

                            <li>
                                <a class="dropdown-item text-danger" href="{{ path('home') }}">
                                    <i class="bi bi-box-arrow-right me-2"></i>
                                    Logout
                                </a>
                            </li>

                        </ul>
                    </li>
                </ul>
                <!-- User avatar END -->

            </div>
        </div>
    </nav>
</header>
<!-- Header END -->

<!-- =======================
Main layout START -->
<main class="py-4">
    <div class="container">
        <div class="row">

            <!-- Left sidebar -->
            <div class="col-xl-3">
                <div class="bg-dark border rounded-3 p-3">
                    <div class="list-group list-group-dark list-group-borderless">

                        <a class="list-group-item active"
                           href="{{ path('student_dashboard') }}">
                            <i class="bi bi-grid-fill me-2"></i>
                            Dashboard
                        </a>

                        <a class="list-group-item" href="#">
                            <i class="bi bi-book me-2"></i>
                            My Courses
                        </a>

                        <a class="list-group-item" href="#">
                            <i class="bi bi-question-circle me-2"></i>
                            Quizzes
                        </a>

                        <a class="list-group-item" href="#">
                            <i class="bi bi-gear me-2"></i>
                            Settings
                        </a>

                        <a class="list-group-item text-danger"
                           href="{{ path('home') }}">
                            <i class="bi bi-box-arrow-right me-2"></i>
                            Sign Out
                        </a>

                    </div>
                </div>
            </div>

            <!-- Main content -->
            <div class="col-xl-9">
                {# student dashboard content here #}
            </div>

        </div>
    </div>
</main>
<!-- Main layout END -->

{% endblock %}
