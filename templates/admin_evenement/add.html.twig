{% extends 'layout/admin_base.html.twig' %}

{% block title %}Ajouter un événement{% endblock %}

{% block content %}
<div class="container-fluid py-4" style="background-color: #f0f2f5; min-height: 100vh;">
    <!-- Header START -->
    <div class="card border-0 shadow-sm mb-4 overflow-hidden rounded-4">
        <div class="card-body p-0">
            <div class="bg-primary bg-gradient p-4 d-md-flex justify-content-between align-items-center">
                <div>
                    <h1 class="h3 mb-1 text-white fw-bold"><i class="bi bi-calendar-plus me-2"></i>Ajouter un événement</h1>
                    <p class="text-white text-opacity-75 mb-0">Créez un nouvel événement académique mémorable.</p>
                </div>
                <div class="mt-3 mt-md-0">
                    <a href="{{ path('admin_evenement_list') }}" class="btn btn-white btn-sm rounded-pill px-4 fw-bold shadow-sm">
                        <i class="bi bi-arrow-left me-1"></i>Retour à la liste
                    </a>
                </div>
            </div>
        </div>
    </div>
    <!-- Header END -->

    {{ form_start(form) }}
    <div class="row g-4">
        <!-- Main Column START -->
        <div class="col-xl-8">
            <!-- Card 1: Informations générales -->
            <div class="card shadow-sm border-0 mb-4 rounded-4 overflow-hidden">
                <div class="card-header bg-white border-0 pt-4 px-4 d-flex align-items-center">
                    <div class="icon-shape bg-primary bg-opacity-10 text-primary rounded-3 me-3 p-2">
                        <i class="bi bi-info-circle fs-4"></i>
                    </div>
                    <h5 class="card-title mb-0 fw-bold text-dark">Informations générales</h5>
                </div>
                <div class="card-body p-4">
                    <div class="mb-4">
                        <label class="form-label fw-bold text-secondary mb-2 small text-uppercase">Titre de l'événement</label>
                        <div class="input-group">
                            <span class="input-group-text bg-light border-0"><i class="bi bi-type-h1 text-primary"></i></span>
                            {{ form_widget(form.titre, {'attr': {'class': 'form-control border-light shadow-none p-3', 'placeholder': 'Ex: Conférence sur l\'IA 2026'}}) }}
                        </div>
                        {{ form_errors(form.titre) }}
                    </div>

                    <div class="mb-4">
                        <label class="form-label fw-bold text-secondary mb-2 small text-uppercase">Description détaillée</label>
                        {{ form_widget(form.description, {'attr': {'class': 'form-control border-light shadow-none p-3', 'rows': '8', 'placeholder': 'Décrivez votre événement ici...'}}) }}
                        <div class="form-text mt-2"><i class="bi bi-stars me-1 text-warning"></i>Une description riche aide les étudiants à mieux comprendre l'intérêt du cours.</div>
                        {{ form_errors(form.description) }}
                    </div>

                    <div class="mb-0">
                        <label class="form-label fw-bold text-secondary mb-2 small text-uppercase">Catégorie</label>
                        <div class="input-group input-group-lg">
                            <span class="input-group-text bg-primary bg-opacity-10 border-0"><i class="bi bi-grid-fill text-primary"></i></span>
                            {{ form_widget(form.categorie, {'attr': {'class': 'form-select border-light shadow-none bg-light'}}) }}
                        </div>
                        {{ form_errors(form.categorie) }}
                    </div>
                </div>
            </div>

            <!-- Card 4: Affiche / Image -->
            <div class="card shadow-sm border-0 mb-4 rounded-4 overflow-hidden">
                <div class="card-header bg-white border-0 pt-4 px-4 d-flex align-items-center">
                    <div class="icon-shape bg-danger bg-opacity-10 text-danger rounded-3 me-3 p-2">
                        <i class="bi bi-image fs-4"></i>
                    </div>
                    <h5 class="card-title mb-0 fw-bold text-dark">Affiche de l'événement</h5>
                </div>
                <div class="card-body p-4">
                    <div class="mb-0">
                        <label class="form-label fw-bold text-secondary mb-2 small text-uppercase">Sélectionner une image</label>
                        {{ form_widget(form.image, {'attr': {'class': 'form-control border-light shadow-none p-2'}}) }}
                        <div class="form-text mt-2"><i class="bi bi-info-circle me-1"></i>Format accepté : JPG, PNG. Taille max : 2Mo.</div>
                        {{ form_errors(form.image) }}
                    </div>
                </div>
            </div>
        </div>
        <!-- Main Column END -->

        <!-- Sidebar Column START -->
        <div class="col-xl-4">
            <!-- Card 2: Dates & Lieu -->
            <div class="card shadow-sm border-0 mb-4 rounded-4 overflow-hidden">
                <div class="card-header bg-white border-0 pt-4 px-4 d-flex align-items-center">
                    <div class="icon-shape bg-info bg-opacity-10 text-info rounded-3 me-3 p-2">
                        <i class="bi bi-geo-alt fs-4"></i>
                    </div>
                    <h5 class="card-title mb-0 fw-bold text-dark">Planification & Lieu</h5>
                </div>
                <div class="card-body p-4">
                    <div class="mb-4">
                        <label class="form-label fw-bold text-secondary mb-2 small text-uppercase">Date de début</label>
                        <div class="input-group">
                            <span class="input-group-text bg-light border-0"><i class="bi bi-calendar-event text-info"></i></span>
                            {{ form_widget(form.dateDebut, {'attr': {'class': 'form-control border-light shadow-none'}}) }}
                        </div>
                    </div>
                    
                    <div class="mb-4">
                        <label class="form-label fw-bold text-secondary mb-2 small text-uppercase">Date de fin</label>
                        <div class="input-group">
                            <span class="input-group-text bg-light border-0"><i class="bi bi-calendar-check text-info"></i></span>
                            {{ form_widget(form.dateFin, {'attr': {'class': 'form-control border-light shadow-none'}}) }}
                        </div>
                    </div>

                    <div class="mb-0">
                        <label class="form-label fw-bold text-secondary mb-2 small text-uppercase">Lieu</label>
                        <div class="input-group">
                            <span class="input-group-text bg-info bg-opacity-10 border-0"><i class="bi bi-pin-map-fill text-info"></i></span>
                            {{ form_widget(form.lieu, {'attr': {'class': 'form-control border-light shadow-none p-3', 'placeholder': 'Adresse ou salle'}}) }}
                        </div>
                        {{ form_errors(form.lieu) }}
                    </div>
                </div>
            </div>

            <!-- Card 3: Paramètres -->
            <div class="card shadow-sm border-0 rounded-4 overflow-hidden">
                <div class="card-header bg-white border-0 pt-4 px-4 d-flex align-items-center">
                    <div class="icon-shape bg-success bg-opacity-10 text-success rounded-3 me-3 p-2">
                        <i class="bi bi-sliders fs-4"></i>
                    </div>
                    <h5 class="card-title mb-0 fw-bold text-dark">Paramètres</h5>
                </div>
                <div class="card-body p-4">
                    <div class="mb-4">
                        <label class="form-label fw-bold text-secondary mb-2 small text-uppercase">Places disponibles</label>
                        <div class="input-group">
                            <span class="input-group-text bg-light border-0"><i class="bi bi-people-fill text-success"></i></span>
                            {{ form_widget(form.capaciteMax, {'attr': {'class': 'form-control border-light shadow-none'}}) }}
                        </div>
                        {{ form_errors(form.capaciteMax) }}
                    </div>

                    <div class="mb-0">
                        <label class="form-label fw-bold text-secondary mb-2 small text-uppercase">Statut automatique</label>
                        <div class="input-group">
                            <span class="input-group-text bg-success bg-opacity-10 border-0"><i class="bi bi-check-circle-fill text-success"></i></span>
                            {{ form_widget(form.statut, {'attr': {'class': 'form-select border-light shadow-none'}}) }}
                        </div>
                        {{ form_errors(form.statut) }}
                    </div>
                </div>
            </div>
        </div>
        <!-- Sidebar Column END -->
    </div>

    <!-- Actions START -->
    <div class="card border-0 shadow-lg mt-5 mb-5 rounded-pill overflow-hidden">
        <div class="card-body p-3 d-flex justify-content-between align-items-center px-5 bg-white">
            <a href="{{ path('admin_evenement_list') }}" class="text-secondary fw-bold text-decoration-none">
                <i class="bi bi-x-circle me-1"></i>Annuler les modifications
            </a>
            <button type="submit" class="btn btn-primary btn-lg rounded-pill px-5 fw-bold shadow">
                <i class="bi bi-plus-circle me-2"></i>Créer l'événement
            </button>
        </div>
    </div>
    <!-- Actions END -->
    {{ form_end(form) }}
</div>

<style>
    .btn-white { background-color: #ffffff; color: #0d6efd; border: 1px solid #ffffff; }
    .btn-white:hover { background-color: #f8f9fa; color: #0a58ca; }
    .form-control:focus, .form-select:focus {
        background-color: #ffffff !important;
        border-color: #0d6efd !important;
        box-shadow: 0 0.5rem 1rem rgba(13, 110, 253, 0.15) !important;
    }
    .card { transition: all 0.3s ease; }
    .card:hover { transform: translateY(-3px); box-shadow: 0 1rem 3rem rgba(0,0,0,0.1) !important; }
    .icon-shape { width: 48px; height: 48px; display: flex; align-items: center; justify-content: center; }
</style>
{% endblock %}
