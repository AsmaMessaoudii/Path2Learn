{# templates/projet/pdf_export.html.twig #}
<!DOCTYPE html>
<html>
<head>
    <meta charset="UTF-8">
    <title>{{ projet.titreProjet }} - Export PDF</title>
    <style>
        body { font-family: Arial, sans-serif; margin: 40px; line-height: 1.6; }
        .header { text-align: center; margin-bottom: 40px; border-bottom: 2px solid #333; padding-bottom: 20px; }
        .header h1 { color: #333; margin-bottom: 10px; font-size: 24px; }
        .header .date { color: #666; font-size: 14px; margin-bottom: 5px; }
        .header .portfolio { color: #666; font-size: 14px; }
        .section { margin-bottom: 25px; }
        .section h2 { color: #555; border-bottom: 1px solid #ddd; padding-bottom: 8px; margin-bottom: 15px; font-size: 18px; }
        .badge { background-color: #f0f0f0; padding: 5px 10px; border-radius: 4px; margin-right: 8px; margin-bottom: 8px; display: inline-block; font-size: 12px; }
        .info-grid { display: flex; flex-wrap: wrap; gap: 20px; margin-bottom: 20px; }
        .info-item { flex: 1; min-width: 200px; }
        .info-label { font-weight: bold; color: #555; margin-bottom: 5px; }
        .info-value { color: #333; }
        .link { color: #0066cc; text-decoration: none; }
        .link:hover { text-decoration: underline; }
        .footer { margin-top: 50px; text-align: center; color: #888; font-size: 12px; border-top: 1px solid #ddd; padding-top: 20px; }
    </style>
</head>
<body>
    <div class="header">
        <h1>{{ projet.titreProjet }}</h1>
        <div class="date">Exporté le {{ "now"|date('d/m/Y à H:i') }}</div>
        <div class="portfolio">Portfolio : {{ projet.portfolio.titre }}</div>
    </div>
    
    {% if projet.description %}
    <div class="section">
        <h2>Description du projet</h2>
        <p>{{ projet.description }}</p>
    </div>
    {% endif %}
    
    <div class="info-grid">
        {% if projet.dateRealisation %}
        <div class="info-item">
            <div class="info-label">Date de réalisation</div>
            <div class="info-value">{{ projet.dateRealisation|date('d/m/Y') }}</div>
        </div>
        {% endif %}
        
        {% if projet.technologies %}
        <div class="info-item">
            <div class="info-label">Technologies utilisées</div>
            <div class="info-value">
                {% for tech in projet.technologies|split(',') %}
                    <span class="badge">{{ tech|trim }}</span>
                {% endfor %}
            </div>
        </div>
        {% endif %}
    </div>
    
    {% if projet.lienDemo %}
    <div class="section">
        <h2>Lien de démonstration</h2>
        <p><a href="{{ projet.lienDemo }}" class="link">{{ projet.lienDemo }}</a></p>
    </div>
    {% endif %}
    
    <div class="footer">
        Document généré automatiquement par Path2Learn<br>
        {{ projet.portfolio.titre }} - {{ "now"|date('Y') }}
    </div>
</body>
</html>