{% extends 'base.html.twig' %}

{% block title %}{{ projet.titreProjet }}{% endblock %}

{% block body %}
<div class="d-flex">

    {% include 'layout/sidebar.html.twig' %}

    <div class="flex-grow-1 min-vh-100 d-flex flex-column">

        {% include 'layout/navbar.html.twig' %}

        <main class="p-4 flex-grow-1" style="background-color: #f0f2f5;">
            <div class="container-fluid">

                <!-- Back button and header -->
                <div class="d-flex justify-content-between align-items-center mb-4">
                    <div>
                        <a href="{{ path('view_etudiant_portfolio', {'id': projet.portfolio.user.id}) }}" class="btn btn-outline-secondary btn-sm mb-2">
                            <i class="bi bi-arrow-left me-1"></i> Retour au portfolio
                        </a>
                        <h4 class="fw-bold mb-1">Détails du projet</h4>
                        <p class="text-muted small">
                            <i class="bi bi-calendar me-1"></i>
                            {% if projet.dateRealisation %}
                                {{ projet.dateRealisation|date('d/m/Y') }}
                            {% else %}
                                Date non spécifiée
                            {% endif %}
                        </p>
                    </div>
                    <div>
                        <span class="badge bg-primary bg-opacity-10 text-primary border border-primary border-opacity-25">
                            <i class="bi bi-folder me-1"></i> Projet
                        </span>
                    </div>
                </div>

                <!-- Project Details Card -->
                <div class="card shadow-sm mb-4">
                    <div class="card-body">
                        <div class="row">
                            <div class="col-md-8">
                                <h5 class="card-title mb-3">{{ projet.titreProjet }}</h5>
                                
                                {% if projet.description %}
                                <div class="mb-4">
                                    <h6 class="text-muted fw-semibold mb-2">
                                        <i class="bi bi-card-text me-2"></i>Description
                                    </h6>
                                    <p class="text-muted mb-0">{{ projet.description }}</p>
                                </div>
                                {% endif %}
                                
                                {% if projet.technologies %}
                                <div class="mb-4">
                                    <h6 class="text-muted fw-semibold mb-2">
                                        <i class="bi bi-tools me-2"></i>Technologies utilisées
                                    </h6>
                                    <div class="d-flex flex-wrap gap-2">
                                        {% for tech in projet.technologies|split(',') %}
                                            {% if tech|trim %}
                                            <span class="badge bg-secondary bg-opacity-10 text-secondary border border-secondary border-opacity-25">
                                                {{ tech|trim }}
                                            </span>
                                            {% endif %}
                                        {% endfor %}
                                    </div>
                                </div>
                                {% endif %}
                            </div>
                            
                            <div class="col-md-4">
                                <div class="card border h-100">
                                    <div class="card-body">
                                        <h6 class="card-title text-muted mb-3">
                                            <i class="bi bi-info-circle me-2"></i>Informations
                                        </h6>
                                        
                                        <div class="mb-3">
                                            <small class="text-muted d-block mb-1">
                                                <i class="bi bi-calendar-event me-1"></i> Date de réalisation
                                            </small>
                                            <div class="fw-medium">
                                                {% if projet.dateRealisation %}
                                                    {{ projet.dateRealisation|date('d/m/Y') }}
                                                {% else %}
                                                    <span class="text-muted">Non spécifiée</span>
                                                {% endif %}
                                            </div>
                                        </div>
                                        
                                        {% if projet.lienDemo %}
                                        <div class="mb-3">
                                            <small class="text-muted d-block mb-1">
                                                <i class="bi bi-link-45deg me-1"></i> Lien de démonstration
                                            </small>
                                            <a href="{{ projet.lienDemo }}" 
                                               target="_blank" 
                                               rel="noopener noreferrer"
                                               class="text-decoration-none text-primary">
                                                {{ projet.lienDemo|slice(0, 30) }}{% if projet.lienDemo|length > 30 %}...{% endif %}
                                                <i class="bi bi-box-arrow-up-right ms-1"></i>
                                            </a>
                                        </div>
                                        {% endif %}
                                        
                                        <div class="mt-4 pt-3 border-top">
                                            <div class="d-flex gap-2">
                                                <!-- PDF Export Button -->
                                                <a href="{{ path('projet_export_pdf', { id: projet.id }) }}"
                                                   class="btn btn-outline-danger btn-sm flex-grow-1"
                                                   title="Exporter en PDF"
                                                   data-id="{{ projet.id }}">
                                                    <i class="bi bi-file-earmark-pdf me-1"></i> PDF
                                                </a>
                                                
                                                <!-- Delete Button - Triggers Modal -->
                                                <button type="button"
                                                        class="btn btn-outline-danger btn-sm delete-project-btn"
                                                        data-bs-toggle="modal"
                                                        data-bs-target="#deleteProjectModal"
                                                        data-project-id="{{ projet.id }}"
                                                        data-project-title="{{ projet.titreProjet|e('html_attr') }}"
                                                        data-student-email="{{ projet.portfolio.user.email|default('')|e('html_attr') }}"
                                                        data-student-name="{{ projet.portfolio.user.prenom|default('')|e('html_attr') }} {{ projet.portfolio.user.nom|default('')|e('html_attr') }}"
                                                        title="Supprimer ce projet">
                                                    <i class="bi bi-trash"></i>
                                                </button>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Related Projects Card -->
                <div class="card shadow-sm">
                    <div class="card-body">
                        <h6 class="card-title text-muted mb-3">
                            <i class="bi bi-grid-3x3-gap me-2"></i> Actions rapides
                        </h6>
                        <div class="d-flex gap-3">
                            <a href="{{ path('view_etudiant_portfolio', {'id': projet.portfolio.user.id}) }}" class="btn btn-outline-secondary btn-sm">
                                <i class="bi bi-arrow-left me-1"></i> Retour au portfolio
                            </a>
                            {% if projet.lienDemo %}
                            <a href="{{ projet.lienDemo }}" target="_blank" class="btn btn-primary btn-sm">
                                <i class="bi bi-play-circle me-1"></i> Voir la démo
                            </a>
                            {% endif %}
                        </div>
                    </div>
                </div>

            </div>
        </main>

    </div>
</div>

<!-- Delete Project Modal -->
<div class="modal fade" id="deleteProjectModal" tabindex="-1" aria-labelledby="deleteProjectModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="deleteProjectModalLabel">Supprimer le projet</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <form id="deleteProjectForm" method="post" action="{{ path('project_delete', { id: projet.id }) }}">
                <div class="modal-body">
                    <p id="deleteConfirmationText" class="mb-3 fw-semibold">
                        Êtes-vous sûr de vouloir supprimer le projet <strong>"{{ projet.titreProjet }}"</strong> ?
                    </p>
                    
                    <div class="alert alert-warning">
                        <i class="bi bi-exclamation-triangle-fill me-2"></i>
                        Cette action est irréversible.
                    </div>
                    
                    <div class="mb-3">
                        <label for="deleteReason" class="form-label fw-semibold">
                            <i class="bi bi-exclamation-triangle me-1"></i>
                            Raison de la suppression <span class="text-danger">*</span>
                        </label>
                        <select class="form-select" id="deleteReason" name="delete_reason" required>
                            <option value="" selected disabled>Sélectionnez une raison</option>
                            <option value="Contenu inapproprié">Contenu inapproprié</option>
                            <option value="Contenu illégal">Contenu illégal</option>
                            <option value="Violation des droits d'auteur">Violation des droits d'auteur</option>
                            <option value="Contenu offensant">Contenu offensant</option>
                            <option value="Information personnelle exposée">Information personnelle exposée</option>
                            <option value="Contenu trompeur">Contenu trompeur</option>
                            <option value="Autre raison">Autre raison</option>
                        </select>
                        <div class="invalid-feedback" id="reasonError">
                            Veuillez sélectionner une raison
                        </div>
                    </div>
                    
                    <div class="mb-3">
                        <label for="deleteDetails" class="form-label fw-semibold">
                            <i class="bi bi-chat-text me-1"></i>
                            Détails supplémentaires (optionnel)
                        </label>
                        <textarea class="form-control" id="deleteDetails" name="delete_details" rows="3" 
                                  placeholder="Ajoutez plus de détails sur la raison de la suppression..."></textarea>
                    </div>
                    
                    <div class="alert alert-info">
                        <i class="bi bi-envelope me-2"></i>
                        <strong>Notification par email :</strong><br>
                        Un email sera envoyé à 
                        <strong>
                            {{ projet.portfolio.user.prenom|default('') }} 
                            {{ projet.portfolio.user.nom|default('') }}
                        </strong> 
                        ({{ projet.portfolio.user.email|default('non disponible') }}) 
                        pour l'informer de la suppression.
                    </div>
                    
                    <!-- Hidden fields -->
                    <input type="hidden" name="_token" value="{{ csrf_token('delete-project-' ~ projet.id) }}">
                    <input type="hidden" name="student_email" value="{{ projet.portfolio.user.email|default('') }}">
                    <input type="hidden" name="student_name" value="{{ projet.portfolio.user.prenom|default('') }} {{ projet.portfolio.user.nom|default('') }}">
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">
                        <i class="bi bi-x-circle me-1"></i> Annuler
                    </button>
                    <button type="submit" class="btn btn-danger" id="confirmDeleteBtn">
                        <i class="bi bi-trash me-1"></i> Supprimer et envoyer l'email
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>

<!-- JavaScript -->
<script>
document.addEventListener('DOMContentLoaded', function() {
    // Récupérer les éléments du DOM
    const deleteModal = document.getElementById('deleteProjectModal');
    const deleteForm = document.getElementById('deleteProjectForm');
    const deleteReason = document.getElementById('deleteReason');
    const confirmDeleteBtn = document.getElementById('confirmDeleteBtn');
    
    // Vérifier que le modal existe
    if (deleteModal) {
        // Quand le modal est affiché
        deleteModal.addEventListener('show.bs.modal', function(event) {
            const button = event.relatedTarget;
            
            // Extraire les données du bouton
            const projectId = button.getAttribute('data-project-id');
            const projectTitle = button.getAttribute('data-project-title');
            const studentEmail = button.getAttribute('data-student-email');
            const studentName = button.getAttribute('data-student-name');
            
            // Mettre à jour le texte de confirmation
            document.getElementById('deleteConfirmationText').innerHTML = 
                `Êtes-vous sûr de vouloir supprimer le projet <strong>"${projectTitle}"</strong> ?`;
            
            // Mettre à jour l'action du formulaire (au cas où)
            deleteForm.action = `/project/${projectId}/delete`;
            
            // Réinitialiser le formulaire
            deleteReason.value = '';
            document.getElementById('deleteDetails').value = '';
            deleteReason.classList.remove('is-invalid');
        });
    }
    
    // Validation du formulaire avant soumission
    if (deleteForm) {
        deleteForm.addEventListener('submit', function(e) {
            // Vérifier si une raison est sélectionnée
            if (!deleteReason.value) {
                e.preventDefault();
                deleteReason.classList.add('is-invalid');
                return false;
            }
            
            // Désactiver le bouton de confirmation
            confirmDeleteBtn.disabled = true;
            confirmDeleteBtn.innerHTML = '<span class="spinner-border spinner-border-sm me-1"></span> Suppression en cours...';
            
            // Ajouter un effet de fondu
            const mainElement = document.querySelector('main');
            if (mainElement) {
                mainElement.style.opacity = '0.7';
                mainElement.style.transition = 'opacity 0.3s ease';
            }
            
            // Fermer le modal
            const modal = bootstrap.Modal.getInstance(deleteModal);
            if (modal) {
                modal.hide();
            }
            
            return true;
        });
        
        // Enlever l'erreur quand l'utilisateur sélectionne une option
        deleteReason.addEventListener('change', function() {
            if (this.value) {
                this.classList.remove('is-invalid');
            }
        });
    }
    
    // PDF Export Button
    const exportPdfBtn = document.querySelector('a[href*="projet_export_pdf"]');
    if (exportPdfBtn) {
        exportPdfBtn.addEventListener('click', function(e) {
            e.preventDefault();
            
            const originalContent = this.innerHTML;
            const url = this.href;
            const projectId = this.getAttribute('data-id');
            
            // Show loading state
            this.innerHTML = '<span class="spinner-border spinner-border-sm me-1"></span> Génération du PDF...';
            this.disabled = true;
            
            fetch(url)
                .then(response => {
                    if (!response.ok) {
                        throw new Error('Erreur HTTP: ' + response.status);
                    }
                    return response.blob();
                })
                .then(blob => {
                    const downloadUrl = window.URL.createObjectURL(blob);
                    const a = document.createElement('a');
                    a.style.display = 'none';
                    a.href = downloadUrl;
                    a.download = `projet_${projectId}.pdf`;
                    document.body.appendChild(a);
                    a.click();
                    window.URL.revokeObjectURL(downloadUrl);
                    document.body.removeChild(a);
                })
                .catch(error => {
                    console.error('Erreur:', error);
                    alert('Erreur lors de l\'export PDF. Veuillez réessayer.');
                })
                .finally(() => {
                    this.innerHTML = originalContent;
                    this.disabled = false;
                });
        });
    }
});
</script>

