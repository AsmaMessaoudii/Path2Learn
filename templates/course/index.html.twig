<script>
document.addEventListener('DOMContentLoaded', function() {
    // Focus sur la barre de recherche si on a des résultats
    const searchInput = document.querySelector('input[name="q"]');
    const searchQuery = "{{ searchQuery }}";
    
    if (searchQuery && searchInput) {
        // Sélectionner le texte dans la barre de recherche
        searchInput.focus();
        searchInput.select();
        
        // Ajouter une classe pour styliser
        searchInput.classList.add('search-active');
    }
    
    // Ajouter un événement pour effacer facilement
    searchInput.addEventListener('keydown', function(e) {
        if (e.key === 'Escape') {
            this.value = '';
            this.form.submit();
        }
    });
    
    // Recherche intelligente avec suggestions (optionnel)
    let searchTimeout;
    searchInput.addEventListener('input', function() {
        clearTimeout(searchTimeout);
        
        // Si plus de 3 caractères, on pourrait faire des suggestions
        if (this.value.length >= 3) {
            searchTimeout = setTimeout(() => {
                // Ici, vous pourriez faire un appel AJAX pour des suggestions
                console.log('Recherche en cours :', this.value);
            }, 500);
        }
    });
    
    // Message de recherche vide
    const searchForm = searchInput.closest('form');
    searchForm.addEventListener('submit', function(e) {
        if (!searchInput.value.trim()) {
            e.preventDefault();
            searchInput.focus();
            searchInput.classList.add('is-invalid');
            
            setTimeout(() => {
                searchInput.classList.remove('is-invalid');
            }, 2000);
        }
    });
    
    // Pour les résultats, on peut ajouter une surbrillance visuelle
    function highlightSearchTerms() {
        const query = searchQuery.toLowerCase();
        if (!query) return;
        
        // Cibler les éléments à surligner
        document.querySelectorAll('.card-title, .text-muted').forEach(element => {
            const text = element.textContent || element.innerText;
            if (text.toLowerCase().includes(query)) {
                element.classList.add('search-highlight');
            }
        });
    }
    
    highlightSearchTerms();
});
</script>

