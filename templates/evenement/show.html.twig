{% extends 'layout/public_base.html.twig' %}

{% block title %}{{ evenement.titre }} - Eduport{% endblock %}

{% block content %}
<div class="container mt-5">
    <div class="row">
        <div class="col-md-8">
            <h1 class="mb-3">{{ evenement.titre }}</h1>
            <p class="text-muted">
                <i class="bi bi-calendar"></i> Du {{ evenement.dateDebut|date('d/m/Y H:i') }} au {{ evenement.dateFin|date('d/m/Y H:i') }} <br>
                <i class="bi bi-geo-alt"></i> {{ evenement.lieu }}
            </p>

            <div class="mb-4">
                {% if evenement.imageUrl %}
                    <img src="{{ evenement.imageUrl }}" class="img-fluid rounded mb-3" alt="{{ evenement.titre }}">
                {% endif %}
                <p class="lead">{{ evenement.description }}</p>
                <p><strong>Catégorie:</strong> {{ evenement.categorie }}</p>
                <p><strong>Places restantes:</strong> {{ evenement.getPlacesDisponibles() }} / {{ evenement.capaciteMax }}</p>
            </div>
            
            <a href="{{ path('evenement_list') }}" class="btn btn-outline-secondary">Retour à la liste</a>
        </div>

        <div class="col-md-4">
            <div class="card shadow">
                <div class="card-header bg-primary text-white">
                    <h4 class="mb-0">Inscription</h4>
                </div>
                <div class="card-body">
                    {% for message in app.flashes('success') %}
                        <div class="alert alert-success">{{ message }}</div>
                    {% endfor %}
                    {% for message in app.flashes('error') %}
                        <div class="alert alert-danger">{{ message }}</div>
                    {% endfor %}

                    {% if evenement.isComplet() %}
                        <div class="alert alert-warning text-center">
                            <strong>Désolé, cet événement est complet.</strong>
                        </div>
                    {% elseif evenement.isPasse() %}
                         <div class="alert alert-secondary text-center">
                            <strong>Cet événement est terminé.</strong>
                        </div>
                    {% else %}
                        <div class="card border rounded-3 p-0 mb-4">
                            <!-- Card header -->
                            <div class="card-header bg-primary text-white rounded-top-3 p-3">
                                <div class="d-flex justify-content-between align-items-center">
                                    <h5 class="mb-0 text-white"><i class="bi bi-person-plus me-2"></i>Inscription</h5>
                                    <span class="badge bg-white text-primary">
                                        {{ evenement.participationEvent|length }}/{{ evenement.capaciteMax }} places
                                    </span>
                                </div>
                            </div>
                            <!-- Card body -->
                            <div class="card-body p-3">
                                <p class="small mb-3">Remplissez le formulaire pour réserver votre place.</p>
                                
                                {{ form_start(form) }}
                                    <div class="mb-3">
                                        <label class="form-label small fw-bold">Nom</label>
                                        <div class="input-group">
                                            <span class="input-group-text bg-light border-light-subtle"><i class="bi bi-person text-secondary"></i></span>
                                            {{ form_widget(form.nomParticipant, {'attr': {'class': 'form-control border-light-subtle shadow-none', 'placeholder': 'Votre nom'}}) }}
                                        </div>
                                        {{ form_errors(form.nomParticipant) }}
                                    </div>

                                    <div class="mb-3">
                                        <label class="form-label small fw-bold">Prénom</label>
                                        <div class="input-group">
                                            <span class="input-group-text bg-light border-light-subtle"><i class="bi bi-person text-secondary"></i></span>
                                            {{ form_widget(form.prenomParticipant, {'attr': {'class': 'form-control border-light-subtle shadow-none', 'placeholder': 'Votre prénom'}}) }}
                                        </div>
                                        {{ form_errors(form.prenomParticipant) }}
                                    </div>

                                    <div class="mb-3">
                                        <label class="form-label small fw-bold">Email</label>
                                        <div class="input-group">
                                            <span class="input-group-text bg-light border-light-subtle"><i class="bi bi-envelope text-secondary"></i></span>
                                            {{ form_widget(form.emailParticipant, {'attr': {'class': 'form-control border-light-subtle shadow-none', 'placeholder': 'exemple@mail.com'}}) }}
                                        </div>
                                        {{ form_errors(form.emailParticipant) }}
                                    </div>

                                    <div class="mb-3">
                                        <label class="form-label small fw-bold">Téléphone</label>
                                        <div class="input-group">
                                            <span class="input-group-text bg-light border-light-subtle"><i class="bi bi-phone text-secondary"></i></span>
                                            {{ form_widget(form.telephoneParticipant, {'attr': {'class': 'form-control border-light-subtle shadow-none', 'placeholder': 'XX XXX XXX'}}) }}
                                        </div>
                                        {{ form_errors(form.telephoneParticipant) }}
                                    </div>

                                    <div class="d-grid mt-4">
                                        <button type="submit" class="btn btn-primary btn-lg rounded-3 shadow-sm">
                                            <i class="bi bi-check-circle me-1"></i>S'inscrire
                                        </button>
                                    </div>
                                {{ form_end(form) }}
                            </div>
                        </div>
                    {% endif %}
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}
