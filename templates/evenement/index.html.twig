{% extends 'layout/public_base.html.twig' %}

{% block title %}Nos Événements - Eduport{% endblock %}

{% block content %}
<!-- Page Header START -->
<section class="py-5 bg-light">
    <div class="container">
        <div class="row">
            <div class="col-12 text-center">
                <h1 class="display-5 fw-bold mb-3">Explorez nos événements académiques</h1>
                <p class="lead text-secondary">Inscrivez-vous aux ateliers, conférences et activités de la vie universitaire.</p>
            </div>
        </div>
    </div>
</section>
<!-- Page Header END -->

<section class="py-5">
    <div class="container">
        <!-- Search and Filter START -->
        <div class="card border-0 shadow-sm mb-5">
            <div class="card-body p-4">
                <form method="get" class="row g-4 align-items-center">
                    <div class="col-lg-6">
                        <div class="input-group">
                            <span class="input-group-text bg-light border-0"><i class="bi bi-search py-1"></i></span>
                            <input type="text" name="q" class="form-control border-light bg-light" placeholder="Rechercher un événement..." value="{{ filters.q }}">
                        </div>
                    </div>
                    <div class="col-lg-4">
                        <select name="category" class="form-select border-light bg-light">
                            <option value="">Toutes les catégories</option>
                            {% for cat in ['Academique', 'Culturel', 'Sportif', 'Professionnel'] %}
                                <option value="{{ cat }}" {% if filters.category == cat %}selected{% endif %}>{{ cat }}</option>
                            {% endfor %}
                        </select>
                    </div>
                    <div class="col-lg-2">
                        <div class="d-grid">
                            <button type="submit" class="btn btn-primary rounded">Filtrer</button>
                        </div>
                    </div>
                </form>
            </div>
        </div>
        <!-- Search and Filter END -->

        <!-- Event Cards START -->
        <div class="row g-4">
            {% for evenement in evenements %}
                <div class="col-md-6 col-lg-4">
                    <div class="card h-100 border-0 shadow-sm overflow-hidden card-hover">
                        <!-- Image -->
                        <div class="position-relative">
                            {% if evenement.imageUrl %}
                                <img src="{{ evenement.imageUrl }}" class="card-img-top" style="height: 220px; object-fit: cover;" alt="{{ evenement.titre }}">
                            {% else %}
                                <div class="card-img-top bg-primary bg-opacity-10 d-flex align-items-center justify-content-center" style="height: 220px;">
                                    <i class="bi bi-image fs-1 text-primary text-opacity-25"></i>
                                </div>
                            {% endif %}
                            <div class="position-absolute top-0 end-0 m-3">
                                <span class="badge bg-white text-dark shadow-sm">{{ evenement.categorie }}</span>
                            </div>
                        </div>

                        <!-- Body -->
                        <div class="card-body p-4">
                            <h5 class="card-title fw-bold mb-3">
                                <a href="{{ path('evenement_show', {'id': evenement.id}) }}" class="text-dark text-decoration-none stretched-link">
                                    {{ evenement.titre }}
                                </a>
                            </h5>
                            <p class="card-text text-secondary small mb-4" style="display: -webkit-box; -webkit-line-clamp: 2; -webkit-box-orient: vertical; overflow: hidden;">
                                {{ evenement.description }}
                            </p>
                            
                            <div class="d-flex flex-column gap-2 small text-muted">
                                <div><i class="bi bi-calendar-event me-2 text-primary"></i>{{ evenement.dateDebut|date('d/m/Y H:i') }}</div>
                                <div><i class="bi bi-geo-alt me-2 text-primary"></i>{{ evenement.lieu }}</div>
                            </div>
                        </div>

                        <!-- Footer -->
                        <div class="card-footer bg-white border-0 p-4 pt-0 d-flex justify-content-between align-items-center">
                            <div class="text-primary fw-bold">
                                {% if evenement.isComplet %}
                                    <span class="text-danger small"><i class="bi bi-x-circle me-1"></i>Complet</span>
                                {% else %}
                                    <span class="small"><i class="bi bi-people me-1"></i>{{ evenement.capaciteMax - evenement.participationEvent|length }} places libres</span>
                                {% endif %}
                            </div>
                            <span class="btn btn-link p-0 text-primary fw-bold text-decoration-none">
                                Détails <i class="bi bi-arrow-right ms-1"></i>
                            </span>
                        </div>
                    </div>
                </div>
            {% else %}
                <div class="col-12 py-5 text-center">
                    <div class="mb-4">
                        <i class="bi bi-calendar-x fs-1 text-muted"></i>
                    </div>
                    <h4 class="text-secondary">Aucun événement ne correspond à votre recherche.</h4>
                    <p class="text-muted">Explorez d'autres catégories ou modifiez vos mots-clés.</p>
                    <a href="{{ path('evenement_list') }}" class="btn btn-outline-primary mt-3">Voir tous les événements</a>
                </div>
            {% endfor %}
        </div>
        <!-- Event Cards END -->

        <!-- Pagination START -->
        {% if totalPages > 1 %}
        <div class="row mt-5">
            <div class="col-12 d-flex justify-content-center">
                <nav aria-label="Page navigation">
                    <ul class="pagination pagination-primary-soft mb-0">
                        <li class="page-item {% if currentPage == 1 %}disabled{% endif %}">
                            <a class="page-link" href="{{ path('evenement_list', filters|merge({'page': currentPage - 1})) }}">
                                <i class="fas fa-angle-double-left"></i>
                            </a>
                        </li>
                        
                        {% for i in 1..totalPages %}
                            <li class="page-item {% if currentPage == i %}active{% endif %}">
                                <a class="page-link" href="{{ path('evenement_list', filters|merge({'page': i})) }}">{{ i }}</a>
                            </li>
                        {% endfor %}

                        <li class="page-item {% if currentPage == totalPages %}disabled{% endif %}">
                            <a class="page-link" href="{{ path('evenement_list', filters|merge({'page': currentPage + 1})) }}">
                                <i class="fas fa-angle-double-right"></i>
                            </a>
                        </li>
                    </ul>
                </nav>
            </div>
        </div>
        {% endif %}
        <!-- Pagination END -->
    </div>
</section>

<style>
    .card-hover { transition: all 0.3s ease; }
    .card-hover:hover { transform: translateY(-5px); box-shadow: 0 1rem 3rem rgba(0,0,0,0.1) !important; }
    .pagination-primary-soft .page-link {
        border-radius: 8px;
        margin: 0 3px;
        border: none;
        background-color: #f5f7f9;
        color: #066ac9;
    }
    .pagination-primary-soft .page-item.active .page-link {
        background-color: #066ac9;
        color: #fff;
    }
</style>
{% endblock %}
