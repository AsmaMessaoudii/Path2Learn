{% extends 'base.html.twig' %}

{% block title %}
    {% if editMode is defined and editMode %}
        Modifier un Choix
    {% else %}
        Ajouter un Choix
    {% endif %}
{% endblock %}

{% block body %}
<div class="d-flex">

    <!-- Sidebar -->
    <nav class="sidebar vh-100 sticky-top bg-dark">
        <div class="p-4 h-100 d-flex flex-column">
            <h5 class="text-white mb-4">
                <i class="bi bi-patch-question-fill me-2"></i> Gestion des Choix
            </h5>
            <div class="list-group flex-grow-1">
                <a class="list-group-item" href="{{ path('quiz_admin') }}">
                    ⬅ Retour aux Questions
                </a>
            </div>
        </div>
    </nav>

    <!-- Main -->
    <div class="flex-grow-1 p-4" style="background:#f0f2f5;">

        <h4 class="mb-4 text-success">
            {% if editMode is defined and editMode %}
                ✏ Modifier un choix pour : <strong>{{ question.titre }}</strong>
            {% else %}
                ➕ Ajouter un choix pour : <strong>{{ question.titre }}</strong>
            {% endif %}
        </h4>

        {# ================= FLASH MESSAGES ================= #}
        {% for message in app.flashes('success') %}
            <div class="alert alert-success alert-dismissible fade show mb-4" role="alert">
                <i class="bi bi-check-circle me-2"></i>{{ message }}
                <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
            </div>
        {% endfor %}
        
        {% for message in app.flashes('error') %}
            <div class="alert alert-danger alert-dismissible fade show mb-4" role="alert">
                <i class="bi bi-exclamation-triangle me-2"></i>{{ message }}
                <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
            </div>
        {% endfor %}

        <div class="card border-0 shadow-sm p-4">
            {{ form_start(form, {
                'attr': {
                    'id': 'choix_form',
                    'class': 'row g-3',
                    'novalidate': 'novalidate'
                }
            }) }}
            
            <input type="hidden" name="form_name" value="{{ form.vars.name }}">
            
            <div class="col-12">
                <div class="mb-3">
                    {{ form_label(form.contenu, "Contenu du choix *", {'label_attr': {'class': 'form-label fw-bold'}}) }}
                    {{ form_widget(form.contenu, {'attr': {'class': 'form-control' ~ (form.contenu.vars.errors|length > 0 ? ' is-invalid' : '')}}) }}
                    <div class="text-danger small mt-1">
                        {{ form_errors(form.contenu) }}
                    </div>
                </div>
            </div>

            <div class="col-12">
                <div class="form-check mb-3">
                    {{ form_widget(form.estCorrect, {'attr': {'class': 'form-check-input' ~ (form.estCorrect.vars.errors|length > 0 ? ' is-invalid' : '')}}) }}
                    {{ form_label(form.estCorrect, "Est correct ?", {'label_attr': {'class': 'form-check-label'}}) }}
                    <div class="text-danger small mt-1">
                        {{ form_errors(form.estCorrect) }}
                    </div>
                </div>
            </div>

            <div class="col-12 d-flex gap-2 mt-3">
                <button type="submit" class="btn btn-success">
                    <i class="bi bi-check-circle-fill"></i>
                    {% if editMode is defined and editMode %}
                        Mettre à jour
                    {% else %}
                        Ajouter le choix
                    {% endif %}
                </button>

                <a href="{{ path('quiz_admin') }}" class="btn btn-secondary">
                    Annuler
                </a>
            </div>

            {{ form_end(form) }}
        </div>
    </div>
</div>
{% endblock %}

{% block javascripts %}
<script>
document.addEventListener('DOMContentLoaded', function () {
    // Validation en temps réel
    const form = document.getElementById('choix_form');
    
    if (form) {
        // Validation à la soumission
        form.addEventListener('submit', function(event) {
            let isValid = true;
            const requiredFields = form.querySelectorAll('[required]');
            
            requiredFields.forEach(field => {
                if (!field.value.trim()) {
                    field.classList.add('is-invalid');
                    const errorDiv = field.closest('.mb-3')?.querySelector('.text-danger') || 
                                    field.closest('.form-check')?.querySelector('.text-danger');
                    if (errorDiv) {
                        errorDiv.textContent = 'Ce champ est obligatoire';
                    }
                    isValid = false;
                } else {
                    field.classList.remove('is-invalid');
                    const errorDiv = field.closest('.mb-3')?.querySelector('.text-danger') ||
                                    field.closest('.form-check')?.querySelector('.text-danger');
                    if (errorDiv) {
                        errorDiv.textContent = '';
                    }
                }
            });
            
            if (!isValid) {
                event.preventDefault();
                event.stopPropagation();
                
                // Scroll vers la première erreur
                const firstError = form.querySelector('.is-invalid');
                if (firstError) {
                    firstError.scrollIntoView({ behavior: 'smooth', block: 'center' });
                    firstError.focus();
                }
            }
        });
        
        // Validation en temps réel
        form.querySelectorAll('input, select, textarea').forEach(field => {
            field.addEventListener('blur', function() {
                validateField(this);
            });
            
            field.addEventListener('input', function() {
                // Effacer l'erreur quand l'utilisateur commence à taper
                if (this.classList.contains('is-invalid')) {
                    this.classList.remove('is-invalid');
                    const errorDiv = this.closest('.mb-3')?.querySelector('.text-danger') ||
                                    this.closest('.form-check')?.querySelector('.text-danger');
                    if (errorDiv) {
                        errorDiv.textContent = '';
                    }
                }
            });
        });
    }
    
    function validateField(field) {
        if (field.hasAttribute('required') && !field.value.trim()) {
            field.classList.add('is-invalid');
            const errorDiv = field.closest('.mb-3')?.querySelector('.text-danger') ||
                            field.closest('.form-check')?.querySelector('.text-danger');
            if (errorDiv) {
                errorDiv.textContent = 'Ce champ est obligatoire';
            }
            return false;
        }
        
        // Si tout est valide
        field.classList.remove('is-invalid');
        const errorDiv = field.closest('.mb-3')?.querySelector('.text-danger') ||
                        field.closest('.form-check')?.querySelector('.text-danger');
        if (errorDiv) {
            errorDiv.textContent = '';
        }
        return true;
    }
    
    // Initialiser les champs avec des classes d'erreur si nécessaire
    document.querySelectorAll('.text-danger:not(:empty)').forEach(errorDiv => {
        const input = errorDiv.closest('.mb-3')?.querySelector('input, select, textarea') ||
                     errorDiv.closest('.form-check')?.querySelector('input, select, textarea');
        if (input) {
            input.classList.add('is-invalid');
        }
    });
});
</script>
{% endblock %}