{% extends 'base.html.twig' %}

{% block title %}Ajouter un Choix{% endblock %}

{% block body %}
<div class="d-flex">
    <!-- Sidebar -->
    <nav class="sidebar vh-100 sticky-top bg-dark">
        <div class="p-4 h-100 d-flex flex-column">
            <h5 class="text-white mb-4"><i class="bi bi-patch-question-fill me-2"></i> Gestion des Choix</h5>
            <div class="list-group flex-grow-1">
                <a class="list-group-item" href="{{ path('quiz_admin') }}">Retour aux Questions</a>
            </div>
        </div>
    </nav>

    <div class="flex-grow-1 p-4" style="background:#f0f2f5;">
        <h4>Ajouter un choix pour : {{ question.titre }}</h4>
        <div class="card border-0 shadow-sm p-4">
            {{ form_start(form, {'attr': {'class': 'row g-3'}}) }}

                <div class="col-12">
                    {{ form_row(form.contenu) }}
                </div>

                <div class="col-12">
                    {{ form_row(form.estCorrect) }}
                </div>

                <div class="col-12">
                    {{ form_row(form.question) }}
                </div>

                <div class="col-12">
                    <button class="btn btn-success mt-3" type="submit">Ajouter le choix</button>
                </div>

            {{ form_end(form) }}
        </div>
    </div>
</div>
{% endblock %}
