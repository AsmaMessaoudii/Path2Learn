                    </div>
                    
                    <!-- Liste des ressources -->
<div class="card border-0 shadow-sm">
    <div class="card-header bg-white fw-bold">
        Ressources existantes ({{ ressourcesList|length }})
    </div>
    <div class="card-body">
        {% if ressourcesList is empty %}
            <div class="text-center py-4 text-muted">
                <i class="bi bi-folder-x display-4"></i>
                <p class="mt-2">Aucune ressource pour le moment</p>
                <p class="small">Ajoutez votre premi√®re ressource p√©dagogique ci-dessus</p>
            </div>
        {% else %}
            <div class="table-responsive">
                <table class="table table-hover">
                    <thead>
                        <tr>
                            <th>Titre</th>
                            <th>Type</th>
                            <th>Cours</th>
                            <th>Date ajout</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        {% for ressource in ressourcesList %}
                            <tr>
                                <td>{{ ressource.titre }}</td>
                                <td>
                                    <span class="badge bg-info">{{ ressource.type }}</span>
                                </td>
                                <td>
                                    {% if ressource.cours %}
                                        {{ ressource.cours.titre }}
                                    {% else %}
                                        <span class="text-muted">Aucun cours</span>
                                    {% endif %}
                                </td>
                                <td>{{ ressource.dateAjout|date('d/m/Y') }}</td>
                                <td>
                                    <div class="btn-group btn-group-sm">
                                        <a href="{{ ressource.url }}" target="_blank" class="btn btn-outline-primary" title="Voir">
                                            <i class="bi bi-eye"></i>
                                        </a>
                                        <a href="#" class="btn btn-outline-secondary" title="Modifier">
                                            <i class="bi bi-pencil"></i>
                                        </a>
                                        <form method="post" action="{{ path('admin_ressources_delete', {'id': ressource.id}) }}" class="d-inline" onsubmit="return confirm('√ätes-vous s√ªr de vouloir supprimer cette ressource ?');">
                                            <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ ressource.id) }}">
                                            <button type="submit" class="btn btn-outline-danger" title="Supprimer">
                                                <i class="bi bi-trash"></i>
                                            </button>
                                        </form>
                                    </div>
                                </td>
                            </tr>
                        {% endfor %}
                    </tbody>
                </table>
            </div>
        {% endif %}
    </div>
</div>

                </div>

            </div>

        </main>
    </div>
</div>

{# ===== JS ===== #}
{% block javascripts %}
<script>
    document.addEventListener('DOMContentLoaded', function () {
        // Variables pour les √©l√©ments de tab
        const coursesTabLink = document.getElementById('nav-cours-link');
        const resourcesTabLink = document.getElementById('nav-ressources-link');
        const sidebarCoursesLink = document.getElementById('sidebar-cours-link');
        const sidebarResourcesLink = document.getElementById('sidebar-ressources-link');
        
        // Fonction pour activer un onglet
        function activateTab(tabElement) {
            if (tabElement) {
                const tab = new bootstrap.Tab(tabElement);
                tab.show();
            }
        }
        
        // Fonction pour synchroniser les liens actifs
        function syncActiveLinks(activeTabId) {
            // Mettre √† jour les onglets principaux
            [coursesTabLink, resourcesTabLink, sidebarCoursesLink, sidebarResourcesLink].forEach(link => {
                if (link.getAttribute('href') === activeTabId) {
                    link.classList.add('active');
                } else {
                    link.classList.remove('active');
                }
            });
        }
        
        // Fonction pour r√©initialiser le formulaire Cours
        function resetCoursForm() {
            // R√©cup√©rer tous les champs du formulaire cours
            const form = document.querySelector('#formCours') || document.querySelector('form[name="cours"]');
            if (form) {
                form.reset();
                
                // R√©initialiser les s√©lecteurs √† leur premi√®re option
                const selects = form.querySelectorAll('select');
                selects.forEach(select => {
                    select.selectedIndex = 0;
                });
                
                // R√©initialiser les champs date
                const dateInputs = form.querySelectorAll('input[type="date"]');
                dateInputs.forEach(input => {
                    input.value = '';
                });
                
                console.log('Formulaire cours r√©initialis√©');
            }
        }
        
        // Gestionnaire pour le bouton "Voir les ressources"
        const btnShowResources = document.getElementById('btn-show-resources');
        if (btnShowResources) {
            btnShowResources.addEventListener('click', function() {
                activateTab(resourcesTabLink);
                syncActiveLinks('#ressources-tab');
            });
        }
        
        // Gestionnaire pour le bouton "Retour aux cours" (en haut)
        const btnShowCourses = document.getElementById('btn-show-courses');
        if (btnShowCourses) {
            btnShowCourses.addEventListener('click', function() {
                activateTab(coursesTabLink);
                syncActiveLinks('#cours-tab');
            });
        }
        
        // Gestionnaire pour le bouton "Retour aux cours" (en bas)
        const btnBackToCourses = document.getElementById('btn-back-to-courses');
        if (btnBackToCourses) {
            btnBackToCourses.addEventListener('click', function() {
                activateTab(coursesTabLink);
                syncActiveLinks('#cours-tab');
            });
        }
        
        // √âcouter les √©v√©nements de changement d'onglet pour synchroniser
        document.querySelectorAll('[data-bs-toggle="tab"]').forEach(tab => {
            tab.addEventListener('shown.bs.tab', function(event) {
                const activeTabId = event.target.getAttribute('href');
                syncActiveLinks(activeTabId);
            });
        });
        
        // Initialiser la synchronisation au chargement
        const activeTab = document.querySelector('.tab-pane.fade.show.active');
        if (activeTab) {
            const activeTabId = '#' + activeTab.id;
            syncActiveLinks(activeTabId);
        }
        
        // Exposer la fonction resetCoursForm globalement
        window.resetCoursForm = resetCoursForm;
    });
</script>
{% endblock %}

