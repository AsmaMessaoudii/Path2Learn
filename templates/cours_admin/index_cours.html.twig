                        <div class="card-header bg-white fw-bold">
                            Ajouter un cours
                        </div>

                        <div class="card-body">
                            {{ form_start(formCours) }}
                            <div class="row g-3">
                                <!-- Ligne 1 : Titre et Mati√®re -->
                                <div class="col-md-6">
                                    {{ form_row(formCours.titre, {
                                        'attr': {'class': 'form-control'},
                                        'row_attr': {'class': 'mb-3'}
                                    }) }}
                                </div>
                                <div class="col-md-6">
                                    {{ form_row(formCours.matiere, {
                                        'attr': {'class': 'form-control'},
                                        'row_attr': {'class': 'mb-3'}
                                    }) }}
                                </div>
                                
                                <!-- Ligne 2 : Description compl√®te -->
                                <div class="col-12">
                                    {{ form_row(formCours.description, {
                                        'attr': {'class': 'form-control', 'rows': 3},
                                        'row_attr': {'class': 'mb-3'}
                                    }) }}
                                </div>
                                
                                <!-- Ligne 3 : Niveau, Dur√©e, Statut -->
                                <div class="col-md-4">
                                    {{ form_row(formCours.niveau, {
                                        'attr': {'class': 'form-select'},
                                        'row_attr': {'class': 'mb-3'}
                                    }) }}
                                </div>
                                <div class="col-md-4">
                                    {{ form_row(formCours.duree, {
                                        'attr': {'class': 'form-control'},
                                        'row_attr': {'class': 'mb-3'}
                                    }) }}
                                </div>
                                <div class="col-md-4">
                                    {{ form_row(formCours.statut, {
                                        'attr': {'class': 'form-select'},
                                        'row_attr': {'class': 'mb-3'}
                                    }) }}
                                </div>
                                
                                <!-- Ligne 4 : Email prof et Date cr√©ation -->
                                <div class="col-md-6">
                                    {{ form_row(formCours.emailProf, {
                                        'attr': {'class': 'form-control'},
                                        'row_attr': {'class': 'mb-3'}
                                    }) }}
                                </div>
                                <div class="col-md-6">
                                    {{ form_row(formCours.dateCreation, {
                                        'attr': {'class': 'form-control'},
                                        'row_attr': {'class': 'mb-3'}
                                    }) }}
                                </div>
                            </div>
                            
                            <!-- Boutons d'action - AJOUT DU BOUTON ANNULER -->
                            <div class="col-12 d-flex justify-content-between mt-3">
                                <button type="button" class="btn btn-outline-secondary" onclick="resetCoursForm()">
                                    <i class="bi bi-x-circle me-1"></i> Annuler
                                </button>
                                <div>
                                    <button type="submit" class="btn btn-primary px-4">
                                        <i class="bi bi-plus-circle me-1"></i> Ajouter le cours
                                    </button>
                                </div>
                            </div>
                            {{ form_end(formCours) }}
                        </div>
                    </div>

                    <!-- Liste des cours existants -->
                    <div class="card border-0 shadow-sm">
                        <div class="card-header bg-white fw-bold d-flex justify-content-between align-items-center">
                            <span>Liste des cours ({{ coursList|length }})</span>
                            
                        </div>
                        <div class="card-body">
                            {% if coursList is empty %}
                                <div class="text-center py-4 text-muted">
                                    <i class="bi bi-journal-x display-4"></i>
                                    <p class="mt-2">Aucun cours pour le moment</p>
                                </div>
                            {% else %}
                                <div class="table-responsive">
                                    <table class="table table-hover">
                                        <thead>
                                            <tr>
                                                <th>Titre</th>
                                                <th>Mati√®re</th>
                                                <th>Niveau</th>
                                                <th>Dur√©e</th>
                                                <th>Statut</th>
                                                <th>Date cr√©ation</th>
                                                <th>Actions</th>
                                            </tr>
                                        </thead>
                                        <tbody>
                                            {% for cours in coursList %}
                                                <tr>
                                                    <td>{{ cours.titre }}</td>
                                                    <td>{{ cours.matiere }}</td>
                                                    <td>
                                                        <span class="badge bg-info">{{ cours.niveau }}</span>
                                                    </td>
                                                    <td>{{ cours.duree }}h</td>
                                                    <td>
                                                        {% if cours.statut == 'publie' %}
                                                            <span class="badge bg-success">Publi√©</span>
                                                        {% else %}
                                                            <span class="badge bg-warning">Non publi√©</span>
                                                        {% endif %}
                                                    </td>
                                                    <td>{{ cours.dateCreation|date('d/m/Y') }}</td>
                                                    <td>
                                                        <div class="btn-group btn-group-sm">
                                                            <a href="#" class="btn btn-outline-primary">
                                                                <i class="bi bi-eye"></i>
                                                            </a>
                                                            <a href="#" class="btn btn-outline-secondary">
                                                                <i class="bi bi-pencil"></i>
                                                            </a>
                                                            <a href="#" class="btn btn-outline-danger">
                                                                <i class="bi bi-trash"></i>
                                                            </a>
                                                        </div>
                                                    </td>
                                                </tr>
                                            {% endfor %}
                                        </tbody>
                                    </table>
                                </div>
                            {% endif %}
                        </div>
                    </div>

                </div>

                <!-- ================= Ressources ================= -->
                <div class="tab-pane fade" id="ressources-tab">

                    <!-- Bouton pour revenir aux cours -->
                    <div class="d-flex justify-content-between align-items-center mb-4">
                        <h5 class="mb-0">Gestion des Ressources p√©dagogiques</h5>
                        
                    </div>

                    <!-- Formulaire d'ajout de ressource -->
                    <div class="card border-0 shadow-sm mb-4">
                        <div class="card-header bg-white fw-bold">
                            Ajouter une ressource p√©dagogique
                        </div>

                        <div class="card-body">
                            {{ form_start(formRessource) }}
                            <div class="row g-3">
                                <!-- Ligne 1 : Titre et Type -->
                                <div class="col-md-6">
                                    {{ form_row(formRessource.titre, {
                                        'attr': {'class': 'form-control'},
                                        'row_attr': {'class': 'mb-3'}
                                    }) }}
                                </div>
                                <div class="col-md-6">
                                    {{ form_row(formRessource.type, {
                                        'attr': {'class': 'form-select'},
                                        'row_attr': {'class': 'mb-3'}
                                    }) }}
                                </div>
                                
                                <!-- Ligne 2 : URL et Cours associ√© -->
                                <div class="col-md-6">
                                    {{ form_row(formRessource.url, {
                                        'attr': {'class': 'form-control'},
