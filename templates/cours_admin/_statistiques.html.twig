<div class="card border-0 shadow-sm mb-4">
    <div class="card-header bg-white fw-bold">
        <i class="bi bi-bar-chart me-2"></i> Statistiques par statut
    </div>
    <div class="card-body">
        {% if statistics|length > 0 %}
            <div class="row">
                {% for stat in statistics %}
                    <div class="col-md-4 mb-3">
                        <div class="card h-100 border-0 bg-light">
                            <div class="card-body text-center">
                                <h5 class="card-title">
                                    {% if stat.statut == 'publié' %}
                                        <span class="badge bg-success">Publié</span>
                                    {% elseif stat.statut == 'brouillon' %}
                                        <span class="badge bg-warning">Brouillon</span>
                                    {% else %}
                                        <span class="badge bg-secondary">Archivé</span>
                                    {% endif %}
                                </h5>
                                <h2 class="display-6">{{ stat.count }}</h2>
                                <p class="text-muted">Cours</p>
                            </div>
                        </div>
                    </div>
                {% endfor %}
            </div>
            
            <!-- Graphique simple -->
            <div class="mt-4">
                <h6>Répartition des cours par statut</h6>
                <div class="progress" style="height: 30px;">
                    {% set total = statistics|reduce((sum, stat) => sum + stat.count, 0) %}
                    {% for stat in statistics %}
                        {% set percentage = (stat.count / total * 100)|round %}
                        <div class="progress-bar 
                            {% if stat.statut == 'publié' %}bg-success
                            {% elseif stat.statut == 'brouillon' %}bg-warning
                            {% else %}bg-secondary{% endif %}" 
                            style="width: {{ percentage }}%"
                            title="{{ stat.statut }}: {{ percentage }}%">
                            {{ stat.count }} ({{ percentage }}%)
                        </div>
                    {% endfor %}
                </div>
            </div>
        {% else %}
            <div class="text-center py-4 text-muted">
                <i class="bi bi-pie-chart display-4"></i>
                <p class="mt-2">Aucune donnée statistique disponible</p>
            </div>
        {% endif %}
    </div>
</div>