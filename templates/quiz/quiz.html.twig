<script>
document.addEventListener('DOMContentLoaded', function() {
    // Fonction pour sélectionner automatiquement un utilisateur
    function autoSelectUser() {
        // 1. D'abord essayer de récupérer depuis localStorage
        const selectedUserId = localStorage.getItem('selectedUserId');
        const selectedUserName = localStorage.getItem('selectedUserName');
        
        // 2. Si aucun en localStorage, prendre le premier utilisateur
        let userToSelect = null;
        let userToSelectName = null;
        
        if (selectedUserId && selectedUserName) {
            userToSelect = selectedUserId;
            userToSelectName = selectedUserName;
        } else {
            // Prendre le premier utilisateur disponible
            const firstRadio = document.querySelector('input[name="selectedUser"]');
            if (firstRadio) {
                userToSelect = firstRadio.value;
                const firstUserCard = firstRadio.closest('.user-card');
                userToSelectName = firstUserCard ? firstUserCard.querySelector('h6').textContent : 'Utilisateur';
                
                // Sauvegarder dans localStorage
                localStorage.setItem('selectedUserId', userToSelect);
                localStorage.setItem('selectedUserName', userToSelectName);
            }
        }
        
        // 3. Cocher la radio correspondante
        if (userToSelect) {
            const radio = document.querySelector(`input[name="selectedUser"][value="${userToSelect}"]`);
            if (radio) {
                radio.checked = true;
                
                // Déclencher l'événement change
                setTimeout(() => {
                    const changeEvent = new Event('change', { bubbles: true });
                    radio.dispatchEvent(changeEvent);
                    
                    // Mettre à jour l'affichage immédiatement
                    updateUserSelection(userToSelect, userToSelectName);
                    
                    // Charger les statuts
                    loadUserStatus(userToSelect);
                }, 100);
            }
        }
    }
    
    // Appeler la fonction de sélection automatique
    autoSelectUser();
    
    // Gérer la sélection d'utilisateur
    document.querySelectorAll('input[name="selectedUser"]').forEach(radio => {
        radio.addEventListener('change', function() {
            if (this.checked) {
                const userId = this.value;
                const userCard = this.closest('.user-card');
                const userName = userCard ? userCard.querySelector('h6').textContent : 'Utilisateur';
                
                // Sauvegarder dans localStorage
                localStorage.setItem('selectedUserId', userId);
                localStorage.setItem('selectedUserName', userName);
                
                // Mettre à jour l'affichage
                updateUserSelection(userId, userName);
                
                // Charger les statuts pour cet utilisateur
                loadUserStatus(userId);
            }
        });
    });
    
    // Gérer les clics sur les boutons de question
    document.querySelectorAll('.start-question-btn').forEach(btn => {
        btn.addEventListener('click', function(e) {
            const questionId = this.dataset.questionId;
            const userId = localStorage.getItem('selectedUserId');
            
            if (!userId) {
                e.preventDefault();
                alert('Veuillez sélectionner un utilisateur avant de commencer le quiz.');
                return false;
            }
            
            // Vérifier si l'utilisateur a déjà répondu
            const userResponses = JSON.parse(localStorage.getItem(`quiz_responses_${userId}`) || '{}');
            const questionKey = `question_${questionId}`;
            
            if (userResponses[questionKey]) {
                e.preventDefault();
                if (confirm('Vous avez déjà répondu à cette question. Voulez-vous voir le résultat ?')) {
                    window.location.href = `/quiz/play/${questionId}?user=${userId}&view=result`;
                }
            } else {
                window.location.href = `/quiz/play/${questionId}?user=${userId}`;
            }
        });
    });
    
    // Initialiser les filtres
    setupQuestionFilters();
});

// Fonction pour mettre à jour l'apparence des questions
function updateQuestionsAppearance(userId) {
    if (!userId) {
        // Reset si aucun utilisateur
        document.querySelectorAll('.question-card').forEach(card => {
            card.classList.remove('unworked', 'worked', 'partial');
            const indicator = card.querySelector('.question-indicator i');
            if (indicator) {
                indicator.className = 'bi bi-question-circle fs-4';
            }
        });
        document.getElementById('recommendation-section').style.display = 'none';
        return;
    }
    
    const userResponses = JSON.parse(localStorage.getItem(`quiz_responses_${userId}`) || '{}');
    const totalQuestions = document.querySelectorAll('.question-card').length;
    let unworkedCount = 0;
    let workedCount = 0;
    let partialCount = 0;
    
    document.querySelectorAll('.question-card').forEach((card, index) => {
        const questionId = card.dataset.questionId;
        const questionKey = `question_${questionId}`;
        const response = userResponses[questionKey];
        const recommendationBadge = card.querySelector('.recommendation-badge');
        const questionIndicator = card.querySelector('.question-indicator i');
        
        // Reset classes
        card.classList.remove('unworked', 'worked', 'partial');
        
        // Reset badge de recommandation
        if (recommendationBadge) {
            recommendationBadge.innerHTML = '';
        }
        
        if (response) {
            // Question travaillée
            workedCount++;
            card.classList.add('worked');
            
            // Indicateur visuel
            if (questionIndicator) {
                questionIndicator.className = response.isCorrect 
                    ? 'bi bi-check-circle-fill fs-4 text-success'
                    : 'bi bi-x-circle-fill fs-4 text-danger';
            }
            
            // Ajouter la classe "partial" pour les questions à revoir
            if (!response.isCorrect) {
                card.classList.add('partial');
                partialCount++;
                
                // Recommandation pour les questions à revoir
                if (recommendationBadge) {
                    recommendationBadge.innerHTML = `
                        <span class="badge bg-warning text-dark">
                            <i class="bi bi-exclamation-triangle me-1"></i>À revoir
                        </span>
                    `;
                }
            } else if (recommendationBadge && Math.random() > 0.8) {
                // Parfois, recommander une question réussie pour renforcer
                recommendationBadge.innerHTML = `
                    <span class="badge bg-success">
                        <i class="bi bi-trophy me-1"></i>Maîtrisée
                    </span>
                `;
            }
            
        } else {
            // Question non travaillée
            unworkedCount++;
            card.classList.add('unworked');
            
            // Indicateur visuel
            if (questionIndicator) {
                questionIndicator.className = 'bi bi-question-circle fs-4 text-danger';
            }
            
            // Recommandations pour les questions non travaillées
            if (recommendationBadge) {
                // Logique de recommandation basée sur la position et autres facteurs
                if (unworkedCount <= 2) {
                    // Hautement recommandé pour les premières questions non travaillées
                    recommendationBadge.innerHTML = `
                        <span class="badge bg-danger">
                            <i class="bi bi-exclamation-triangle me-1"></i>Haute priorité
                        </span>
                    `;
                } else if (index <= 2) {
                    // Recommander les premières questions de la liste
                    recommendationBadge.innerHTML = `
                        <span class="badge bg-info">
                            <i class="bi bi-rocket me-1"></i>Bon pour débuter
                        </span>
                    `;
                } else if (Math.random() > 0.7) {
                    // Recommandation aléatoire pour variété
                    recommendationBadge.innerHTML = `
                        <span class="badge bg-primary">
                            <i class="bi bi-lightbulb me-1"></i>Essayez celle-ci
                        </span>
                    `;
                }
            }
        }
    });
    
    // Mettre à jour les statistiques
    updateProgressStats(unworkedCount, workedCount, partialCount, totalQuestions);
    document.getElementById('recommendation-section').style.display = 'block';
}

// Fonction pour mettre à jour les statistiques de progression
function updateProgressStats(unworked, worked, partial, total) {
    const unworkedCountEl = document.getElementById('unworked-count');
    const workedCountEl = document.getElementById('worked-count');
    const progressBar = document.getElementById('progress-bar');
    const progressPercentage = document.getElementById('progress-percentage');
    
    if (unworkedCountEl) unworkedCountEl.textContent = `${unworked} non travaillées`;
    if (workedCountEl) workedCountEl.textContent = `${worked} travaillées`;
    
    // Calculer le pourcentage de progression
    const percentage = total > 0 ? Math.round((worked / total) * 100) : 0;
    
    if (progressBar) {
        progressBar.style.width = `${percentage}%`;
        progressBar.className = `progress-bar ${
            percentage < 30 ? 'bg-danger' : 
            percentage < 70 ? 'bg-warning' : 'bg-success'
        }`;
    }
    
    if (progressPercentage) {
        progressPercentage.textContent = `${percentage}%`;
        progressPercentage.className = `ms-3 fw-bold ${
            percentage < 30 ? 'text-danger' : 
            percentage < 70 ? 'text-warning' : 'text-success'
        }`;
    }
}

// Fonction pour configurer les filtres
function setupQuestionFilters() {
    const filterButtons = document.querySelectorAll('.filter-btn');
    
    filterButtons.forEach(btn => {
        btn.addEventListener('click', function() {
            // Retirer la classe active de tous les boutons
            filterButtons.forEach(b => b.classList.remove('active'));
            // Ajouter la classe active au bouton cliqué
            this.classList.add('active');
            
            const filter = this.dataset.filter;
            filterQuestions(filter);
        });
    });
}

// Fonction pour filtrer les questions
function filterQuestions(filter) {
    const cards = document.querySelectorAll('.question-card');
    
    cards.forEach(card => {
        switch(filter) {
            case 'all':
                card.style.display = 'block';
                break;
            case 'unworked':
                card.style.display = card.classList.contains('unworked') ? 'block' : 'none';
                break;
            case 'worked':
                card.style.display = card.classList.contains('worked') ? 'block' : 'none';
                break;
            case 'partial':
                card.style.display = card.classList.contains('partial') ? 'block' : 'none';
                break;
        }
    });
}

// Fonction pour mettre à jour les boutons de question
function updateQuestionButtons(userId) {
    document.querySelectorAll('.start-question-btn').forEach(btn => {
        const questionId = btn.dataset.questionId;
        
        // Vérifier si l'utilisateur a déjà répondu
        const userResponses = JSON.parse(localStorage.getItem(`quiz_responses_${userId}`) || '{}');
        const questionKey = `question_${questionId}`;
        const hasAnswered = userResponses[questionKey];
        
        if (userId) {
            btn.disabled = false;
            
            if (hasAnswered) {
                btn.classList.remove('btn-primary');
                btn.classList.add('btn-outline-secondary');
                btn.innerHTML = '<i class="bi bi-eye me-2"></i>Voir résultat';
            } else {
                btn.classList.remove('btn-outline-secondary');
                btn.classList.add('btn-primary');
                btn.innerHTML = '<i class="bi bi-play-circle me-2"></i>Commencer';
            }
        } else {
            btn.disabled = true;
            btn.classList.remove('btn-primary');
            btn.classList.add('btn-outline-secondary');
            btn.innerHTML = '<i class="bi bi-lock me-2"></i>Verrouillé';
        }
    });
}

// Fonction pour mettre à jour la sélection d'utilisateur
function updateUserSelection(userId, userName) {
    const selectedUserElement = document.getElementById('selected-user-name');
    const selectedUserInfo = document.getElementById('selected-user-info');
    const startQuizBtn = document.getElementById('start-quiz-btn');
    
    if (selectedUserElement) selectedUserElement.textContent = userName;
    if (selectedUserInfo) selectedUserInfo.style.display = 'block';
    if (startQuizBtn) startQuizBtn.disabled = false;
    
    updateQuestionButtons(userId);
}

// Fonction pour effacer la sélection d'utilisateur
function clearUserSelection() {
    localStorage.removeItem('selectedUserId');
    localStorage.removeItem('selectedUserName');
    
    document.querySelectorAll('input[name="selectedUser"]').forEach(radio => {
        radio.checked = false;
    });
    
    const selectedUserInfo = document.getElementById('selected-user-info');
    const startQuizBtn = document.getElementById('start-quiz-btn');
    const recommendationSection = document.getElementById('recommendation-section');
    
    if (selectedUserInfo) selectedUserInfo.style.display = 'none';
    if (startQuizBtn) startQuizBtn.disabled = true;
    if (recommendationSection) recommendationSection.style.display = 'none';
    
    updateQuestionButtons(null);
    
    document.querySelectorAll('[id^="question-status-"]').forEach(div => {
        div.innerHTML = '<small class="text-muted">Sélectionnez un utilisateur pour voir le statut</small>';
    });
    
    document.querySelectorAll('.question-card').forEach(card => {
        card.classList.remove('unworked', 'worked', 'partial');
        const indicator = card.querySelector('.question-indicator i');
        if (indicator) {
            indicator.className = 'bi bi-question-circle fs-4';
        }
        const recommendationBadge = card.querySelector('.recommendation-badge');
        if (recommendationBadge) {
            recommendationBadge.innerHTML = '';
        }
    });
}

// Fonction pour charger le statut des questions
function loadUserStatus(userId) {
    if (!userId) return;
    
    const userResponses = JSON.parse(localStorage.getItem(`quiz_responses_${userId}`) || '{}');
    
    document.querySelectorAll('.question-card').forEach(card => {
        const questionId = card.dataset.questionId;
        const questionKey = `question_${questionId}`;
        const statusDiv = document.getElementById(`question-status-${questionId}`);
        
        if (statusDiv) {
            if (userResponses[questionKey]) {
                const response = userResponses[questionKey];
                const score = response.score;
                const maxScore = response.maxScore;
                const isCorrect = response.isCorrect;
                
                statusDiv.innerHTML = `
                    <div class="alert alert-${isCorrect ? 'success' : 'danger'} py-2 mb-0">
                        <i class="bi bi-${isCorrect ? 'check-circle' : 'x-circle'} me-2"></i>
                        <strong>${isCorrect ? 'Correct' : 'À revoir'}</strong> - 
                        Score: ${score}/${maxScore} pts
                        <button class="btn btn-sm btn-outline-${isCorrect ? 'success' : 'danger'} ms-2" 
                                onclick="window.location.href='/quiz/play/${questionId}?user=${userId}&view=result'">
                            <i class="bi bi-eye"></i> Voir
                        </button>
                    </div>
                `;
            } else {
                statusDiv.innerHTML = `
                    <div class="alert alert-light py-2 mb-0 border">
                        <i class="bi bi-clock me-2"></i>
                        <strong>Non travaillée</strong>
                        <small class="text-muted ms-2">À découvrir</small>
                    </div>
                `;
            }
        }
    });
    
    updateQuestionsAppearance(userId);
}

// Fonction pour démarrer le quiz
function startQuizWithSelectedUser() {
    const userId = localStorage.getItem('selectedUserId');
    if (userId) {
        const userResponses = JSON.parse(localStorage.getItem(`quiz_responses_${userId}`) || '{}');
        
        // Chercher une question non travaillée
        let firstUnanswered = null;
        document.querySelectorAll('.question-card').forEach(card => {
            const questionId = card.dataset.questionId;
            if (!userResponses[`question_${questionId}`] && !firstUnanswered) {
                firstUnanswered = questionId;
            }
        });
        
        if (firstUnanswered) {
            window.location.href = `/quiz/play/${firstUnanswered}?user=${userId}`;
        } else {
            if (confirm('Vous avez répondu à toutes les questions. Voulez-vous recommencer ?')) {
                localStorage.removeItem(`quiz_responses_${userId}`);
                loadUserStatus(userId);
                const firstQuestion = document.querySelector('.question-card')?.dataset.questionId;
                if (firstQuestion) {
                    window.location.href = `/quiz/play/${firstQuestion}?user=${userId}`;
                }
            }
        }
    }
}

// Fonction pour sauvegarder une réponse
function saveQuizResponse(userId, questionId, responseData) {
    const key = `quiz_responses_${userId}`;
    const userResponses = JSON.parse(localStorage.getItem(key) || '{}');
    userResponses[`question_${questionId}`] = responseData;
    localStorage.setItem(key, JSON.stringify(userResponses));
}
